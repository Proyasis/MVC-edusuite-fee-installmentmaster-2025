@model CITS.EduSuite.Business.Models.ViewModels.UniversityCancelationViewModel
@using System.Web.Mvc
@using CITS.EduSuite.Business.Models.ViewModels

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CitsValidation")
    @Scripts.Render("~/Scripts/UniversityPaymentCancelation")
    @Scripts.Render("~/Content/DatePickerJS")
}

<input type="hidden" id="hdnGetUniversityCancelation" value="@Url.Action("GetUniversityCancelation", "UniversityPaymentCancelation")" />
<input type="hidden" id="hdnDeleteUniversityPaymentCancelation" value="@Url.Action("DeleteUniversityPaymentCancelation", "UniversityPaymentCancelation")" />
<input type="hidden" id="hdnAddEditUniversityPaymentCancelation" value="@Url.Action("AddEditUniversityPaymentCancelation", "UniversityPaymentCancelation")" />
<input type="hidden" id="hdnUniversityPaymentCancelationList" value="@Url.Action("UniversityPaymentCancelationList", "UniversityPaymentCancelation")" />


<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.UniversityPaymentCancelation</h3>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-3 text-right">
            <a href="@Url.Action("ViewUniversityPayment", "UniversityPaymentCancelation")" class="btn btn-success btn-sm"><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.UniversityPaymentCancelation</span></a>
        </div>
    </div>
</header>
<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar">

            <div class=" form-row ">
                @if (Model.Branches.Count == 1)
                {
                    {
                        Model.BranchKey = Model.BranchKey == 0 ? (short)Model.Branches.Select(x => x.RowKey).FirstOrDefault() : Model.BranchKey;
                    }
                    @Html.HiddenFor(m => m.BranchKey)
                }
                else
                {

                    <div class="col-12 col-sm-3 col-lg-2 ">
                        <fieldset class="form-group">
                            @Html.DropDownListFor(m => m.BranchKey, new SelectList(Model.Branches, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Branch, new { @class = "form-control input-control", @InputFor = "lblBranch", @data_live_search = "true" })
                            <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.BranchKey)
                            </span>
                        </fieldset>
                    </div>
                }


                <div class="col-lg-3 col-6">
                    <input id="txtsearch" type="text" name="focus" class="form-control gridSearchTextBox" placeholder="@EduSuiteUIResources.Search @EduSuiteUIResources.VoucherNumber @EduSuiteUIResources.Coma @EduSuiteUIResources.StudentName@EduSuiteUIResources.Coma@EduSuiteUIResources.AdmissionNo" /> @* Change Search TextBox Placeholder*@
                    <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
                </div>

                <div class="col-lg-3 col-4">
                    <a class="btn btn-info btn-sm float-right " onclick='window.location.reload()'>
                        <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                    </a>
                </div>

            </div>
        </div>
        <div class="table-wrapper">
            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>

    <div id='myModal' class='modal fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='myModalContent'></div>
            </div>
        </div>
    </div>
</section>



<script>
    $(document).ready(function () {

        UniversityPaymentCancelation.GetUniversityPaymentCancelations();
        $("#BranchKey").on("change", function () {
            UniversityPaymentCancelation.GetUniversityPaymentCancelations();
        });
        $("#txtsearch").on("input", function () {
            UniversityPaymentCancelation.GetUniversityPaymentCancelations();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            UniversityPaymentCancelation.GetUniversityPaymentCancelations();
        });

        AppCommon.FormatDateInput();
    });

</script>

