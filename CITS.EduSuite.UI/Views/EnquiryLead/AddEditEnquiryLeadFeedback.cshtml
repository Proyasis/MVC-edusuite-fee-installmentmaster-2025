@model CITS.EduSuite.Business.Models.ViewModels.EnquiryLeadFeedbackViewModel


<input type="hidden" id="hdnGetCallStatusByEnquiryStatus" value="@Url.Action("GetCallStatusByEnquiryStatus", "EnquiryLead")" />
<input type="hidden" id="hdnCheckCallStatusDuration" value="@Url.Action("CheckCallStatusDuration", "EnquiryLead")" />
<div class="modal-header">
    <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close"><i class="fa fa-close"></i></button>
    <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.Add @EduSuiteUIResources.Sla @EduSuiteUIResources.Edit @EduSuiteUIResources.Lead @EduSuiteUIResources.Feedback</h4>
</div>

@using (Html.BeginForm("AddEditEnquiryLeadFeedback", "EnquiryLead", FormMethod.Post, htmlAttributes: new { @id = "frmEnquiryLeadFeedback" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RowKey, new { @class = "hidEmployeeTaskKey" })
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.EnquiryLeadKey)
    @Html.HiddenFor(m => m.IsDuration)

    <div class="modal-body">
        <div class="form-master">

            <div class="formMaster">

                <div class="form-row">
                    <span class="text-danger"><strong> @Html.ValidationMessage("error_msg")</strong>  </span>
                </div>
                <div class="form-row">
                    <div class="col-sm-4 col-6">
                        <div class="form-group">
                            @Html.Label(EduSuiteUIResources.CallType, htmlAttributes: new { @id = "lblCallType", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                            @Html.DropDownListFor(m => m.CallTypeKey, new SelectList(Model.CallTypes, "RowKey", "Text", Model.CallTypeKey), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.CallType, new { @class = "form-control input-control", @InputFor = "lblCallType" })
                            <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.CallTypeKey)
                            </span>
                        </div>
                    </div>


                    <div class="col-sm-4 col-6">
                        <div class="form-group">
                            @Html.Label(EduSuiteUIResources.Lead + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Status, htmlAttributes: new { @id = "lblEnquiryLeadCallStatus", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                            @Html.DropDownListFor(m => m.EnquiryLeadStatusKey, new SelectList(Model.EnquiryLeadStatuses, "RowKey", "Text", Model.EnquiryLeadStatusKey), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.CallStatus, new { @class = "form-control input-control", })
                            <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.EnquiryLeadStatusKey)
                            </span>
                        </div>
                    </div>


                    <div class="col-sm-4 col-6">
                        <div class="form-group">
                            @Html.Label(EduSuiteUIResources.CallStatus, htmlAttributes: new { @id = "lblEnquiryLeadCallStatus", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                            @Html.DropDownListFor(m => m.EnquiryLeadCallStatusKey, new SelectList(Model.EnquiryLeadCallStatuses, "RowKey", "Text", Model.EnquiryLeadCallStatusKey), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.CallStatus, new { @class = "form-control input-control", @InputFor = "lblEnquiryLeadCallStatus" })
                            <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.EnquiryLeadCallStatusKey)
                            </span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            @Html.Label(EduSuiteUIResources.Duration, htmlAttributes: new { @id = "lblCallDuration", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                            @Html.TextBoxFor(m => m.CallDuration, new { @class = "form-control input-control", @data_input_type = "duration", @InputFor = "lblCallDuration" })
                            <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.CallDuration)
                            </span>
                        </div>
                    </div>


                    <div class="col-6">
                        <div class="form-group">
                            @Html.Label(EduSuiteUIResources.NextCallSchedule, htmlAttributes: new { @id = "lblNextCallSchedule", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                            @Html.TextBoxFor(m => m.NextCallSchedule, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblNextCallSchedule", @data_inputmask = "'alias': 'dd/mm/yyyy'" })
                            <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.NextCallSchedule)
                            </span>
                        </div>
                    </div>


                </div>



                <div class="form-row">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.Label(EduSuiteUIResources.Feedback, htmlAttributes: new { @id = "lblNextCallSchedule", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>

                            @Html.TextAreaFor(m => m.Feedback, new { @id = "txtStartDate", @class = "form-control input-control" })
                            <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.Feedback)
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-start">
        <div class="form-group">
            <input type="submit" value="@EduSuiteUIResources.Save" id="btnSave" class="btn btn-sm btn-success mx-1" />
            <button type="button" data-dismiss="modal" class="btn btn-sm btn-danger mx-1">@EduSuiteUIResources.Cancel</button>

        </div>
    </div>
}
<script>

    $(document).ready(function ()
    {
        $.validator.unobtrusive.parse($("#frmEnquiryLeadFeedback")[0]);
        AppCommon.FormatDateInput();
        AppCommon.FormatTimeInput();
        AppCommon.FormatDurationInput();

        AppCommon.FormatInputCase();
        //$("#frmEnquiryLeadFeedback").submit(function (e) {
        //    EnquiryLead.FormSubmitLeadFeedback();
        //    e.preventDefault();
        //})
       
        $("#btnCancel").on("click", function ()
        {
            $("#frmEnquiryLeadFeedback").find("input:not(:submit):not(:button),select,textarea").each(function ()
            {
                $(this).val("");
            });
            $(this).remove();
        })
    })



    $(document).ready(function ()
    {

        //$("#EnquiryLeadStatusKey").on("change", function ()
        //{
        //    var obj = {};
        //    obj.EnquiryStatusKey = $("#EnquiryLeadStatusKey").val();
        //    EnquiryLead.GetCallStatusByEnquiryStatus(obj, $("#EnquiryLeadCallStatusKey"));
        //    EnquiryLead.CheckCallStatusDuration($(this).val());
        //});
        $("#EnquiryLeadCallStatusKey").on("change", function ()
        {
            EnquiryLead.CheckCallStatusDuration($(this).val());
        });



    });





</script>
