    </div>
</div>


<script>
    var jsonData =@(Html.Raw(Json.Encode(Model)));

    $(document).ready(function () {
        ViewStudyMaterialUpload.GetStudyMaterialsCategory(jsonData);
    });


    $(document).ready(function () {
        $("#StudyMaterialCategories li").click(function () {
            $("#StudyMaterialCategories li").removeClass("active");
            $(this).addClass("active");

        });



        $(".selector").click(function () {
            $(".selector").removeClass("active");
            $(this).addClass("active");
            alert("HI");

        });

    });

</script>

