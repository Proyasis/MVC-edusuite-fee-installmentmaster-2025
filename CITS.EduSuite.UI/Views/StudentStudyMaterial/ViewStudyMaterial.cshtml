@model CITS.EduSuite.Business.Models.ViewModels.StudentStudyMaterialViewModel

@using System.Web.Mvc

@section scripts{


    @Scripts.Render("~/Scripts/StudentStudyMaterial")
    @Scripts.Render("~/Scripts/Shared")


}
<input type="hidden" id="hdnGetStudyMaterialCategory" value="@Url.Action("GetStudyMaterialCategory", "StudentStudyMaterial")" />
<input type="hidden" id="hdnGetStudyMaterials" value="@Url.Action("GetStudyMaterials", "StudentStudyMaterial")" />
