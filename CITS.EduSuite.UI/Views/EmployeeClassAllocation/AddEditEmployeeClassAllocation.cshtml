@model CITS.EduSuite.Business.Models.ViewModels.EmployeeClassAllocationViewModel


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/JqueryRepeater")
    @Scripts.Render("~/Scripts/EmployeeClassAllocation")
    @Scripts.Render("~/Content/MultiselectJs")


}
<input type="hidden" id="hdnGetSubjectDetails" value="@Url.Action("GetSubjectDetails", "EmployeeClassAllocation")" />
<input type="hidden" id="hdnGetBatchDetails" value="@Url.Action("GetBatchDetails", "EmployeeClassAllocation")" />
<input type="hidden" id="hdnDeleteClassAllocation" value="@Url.Action("DeleteClassAllocation", "EmployeeClassAllocation")" />
<input type="hidden" id="hdnCheckIncharge" value="@Url.Action("CheckIncharge", "EmployeeClassAllocation")" />




<input type="hidden" id="hdnEmployeeClass" value="@Url.Action("EmployeeClass", "EmployeeClassAllocation", new { id = Model.EmployeesKey })" />

@using (Html.BeginForm("AddEditEmployeeClassAllocation", "EmployeeClassAllocation", new { id = "" }, FormMethod.Post, htmlAttributes: new { @id = "frmClassAllocation" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RowKey)
    @Html.HiddenFor(m => m.EmployeesKey)
    @Html.ValidationSummary(true)

    <div class="modal-header w3-deep-purple">
        <button type="button" class="modal-close" data-hidden data-dismiss="modal" aria-label="Close"><i class="fa fa-close"></i></button>
        <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.AddEdit@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.ClassAllocation</h4>
    </div>


    <div class="modal-body bg-white">
        <div class="form-row">

            <div class="col-12 col-sm-12 col-lg-12">
                <fieldset class="form-group">
                    @Html.Label(EduSuiteUIResources.ClassCode, htmlAttributes: new { @id = "lblFeeDate", @class = "form-label" })
                    <div class="required-icon"><div class="text">*</div></div>
                    @Html.DropDownListFor(m => m.ClassDetailsKey, new SelectList(Model.ClassDetails, "RowKey", "Text", Model.ClassDetailsKey), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.ClassCode, new { @class = "form-control border-radius input-control", @InputFor = "lblAddressType", @onchange = "EmployeeClassAllocation.GetSubjectByClass(this)" })
                </fieldset>
                <span class="form-control-error-text">
                    @Html.ValidationMessageFor(m => m.ClassDetailsKey)
                </span>
            </div>
            <div class="col-12 col-sm-12 col-lg-12  px-1">
                <fieldset class="form-group">
                    @Html.Label(EduSuiteUIResources.Batch, htmlAttributes: new { @id = "lblFeeAmount", @class = "form-label" })
                    <div class="required-icon"><div class="text">*</div></div>
                    @Html.DropDownListFor(m => m.BatchKey, new SelectList(Model.Batches, "RowKey", "Text", Model.BatchKey), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Batch, new { @class = "form-control border-radius input-control", @InputFor = "lblAddressType" })

                    <span class="form-control-error-text">
                        @Html.ValidationMessageFor(m => m.BatchKey)
                    </span>
                </fieldset>
            </div>
            <div class="col-12">
                <fieldset class="form-group">
                    @Html.Label(EduSuiteUIResources.Subject, htmlAttributes: new { @id = "lblRemarks", @class = "form-label" })
                    @Html.ListBoxFor(m => m.SubjectKeys, new SelectList(Model.SubjectDetails, "RowKey", "Text", Model.SubjectKeys), new { @class = "form-control border-radius input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Subject })

                    <span class="form-control-error-text">
                        @Html.ValidationMessageFor(m => m.SubjectKeys)
                    </span>
                </fieldset>
            </div>
            <div class="col-lg-4">
                <fieldset class="form-group">
                    @Html.Label(EduSuiteUIResources.Incharge, new { @class = "form-label" })

                    <div class="switch-check my-2">
                        @Html.CheckBoxFor(m => m.InCharge, new { @class = "switch-input", @onchange = "EmployeeClassAllocation.CheckIncharge(this)" })
                        <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                        <div class="switch-handle"></div>
                    </div>

                </fieldset>

            </div>
            <div class="col-lg-4">
                <fieldset class="form-group">
                    @Html.Label(EduSuiteUIResources.Attendance, new { @class = "form-label" })

                    <div class="switch-check my-2">
                        @Html.CheckBoxFor(m => m.IsAttendance, new { @class = "switch-input" })
                        <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                        <div class="switch-handle"></div>
                    </div>
                    <span class="form-control-error-text">
                        @Html.ValidationMessageFor(m => m.IsAttendance)
                    </span>
                </fieldset>

            </div>

            <div class="col-lg-4">
                <fieldset class="form-group">
                    @Html.Label(EduSuiteUIResources.IsActive, new { @class = "form-label" })

                    <div class="switch-check my-2">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "switch-input" })
                        <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                        <div class="switch-handle"></div>
                    </div>
                    <span class="form-control-error-text">
                        @Html.ValidationMessageFor(m => m.IsActive)
                    </span>
                </fieldset>

            </div>


            <div class="form-row">
                <div class="col-12">
                    <div class="form-group">
                        <input type="button" value="@EduSuiteUIResources.Save" id="btnSave" onclick="EmployeeClassAllocation.FormSubmit();" class="btn btn-sm btn-success mx-1" />
                        @if (Model.RowKey != 0)
                        {
                            <button type="button" id="btnCancel" class="btn btn-sm btn-danger mx-1">@EduSuiteUIResources.Cancel</button>
                        }
                    </div>

                </div>

            </div>
        </div>
    </div>
}

<script>
    var jsonData=@(Html.Raw(Json.Encode(Model)));

    $(document).ready(function () {
        setTimeout(function () {
            AppCommon.FormatDateInput();

        });
    });



</script>


<script>
    var jsonData=@(Html.Raw(Json.Encode(Model)));
    $(document).ready(function () {
        $("#EmployeesKey").val(@Model.EmployeesKey)
        EmployeeClassAllocation.GetEmployeeClassAllocation(jsonData);
        AppCommon.CustomRepeaterRemoteMethod()

        $("[id*=SubjectKeys]").each(function(){
            $(this).selectpicker();
        })


        $("#btnCancel").on("click",function(){

                EmployeeClassAllocation.BindEmployeeClassDetails();
                EmployeeClassAllocation.AddEditClassAllocation(null, @Model.EmployeesKey);
        })

    });
    function checkIncharge(_this,name)
    {

        if(_this.checked)
        {

            var obj={}
            obj.EmployeesKey = $("#EmployeesKey").val();
            obj.ClassDetailsKey=$('select[id*=ClassDetailsKey]').val();

            EmployeeClassAllocation.CheckIncharge(obj);
        }
    }
</script>



