@model CITS.EduSuite.Business.Models.ViewModels.EmployeePersonalViewModel
@using CITS.EduSuite.Business.Models.ViewModels
@using CITS.EduSuite.UI
<input type="hidden" id="hdnAddEditEmployeeClassAllocation" value="@Url.Action("AddEditEmployeeClassAllocation", "EmployeeClassAllocation", new { id = "" })" />
<input type="hidden" id="hdnBindEmployeeClassDetails" value="@Url.Action("BindEmployeeClassDetails", "EmployeeClassAllocation", new { id = Model.EmployeeKey })" />

<div class="form-row">

    <div class="col-sm-5 col-lg-4 col-12">
        <div id="dvAddEditClassAllocation">

        </div>


    </div>
    <div class="col-sm-7 col-lg-8  col-12">
        @if ((Model.EmployeeKey != 0) || !String.IsNullOrEmpty(Model.EmployeeCode))
        {
            @Html.Action("EmployeeDetail", "Shared", new { id = (Model.EmployeeKey ?? 0), AdmissionNo = Model.EmployeeCode })
        }
        <div id="dvClassDetails">

        </div>


    </div>



</div>
<div class="col-12">
    <span class="text-danger"><strong> @Html.ValidationMessage("error_msg")</strong>  </span>
</div>

<script>
    $(document).ready(function () {
        setTimeout(function(){
            if (@Model.EmployeeKey != 0 && @Model.EmployeeKey != null)
            {
                EmployeeClassAllocation.BindEmployeeClassDetails();
                EmployeeClassAllocation.AddEditClassAllocation(null, @Model.EmployeeKey);
            }
        },500)

    })
</script>