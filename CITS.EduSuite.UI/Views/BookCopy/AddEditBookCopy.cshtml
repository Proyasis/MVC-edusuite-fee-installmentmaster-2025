@model CITS.EduSuite.Business.Models.ViewModels.BookCopyViewModel


<div class="modal-header">
    <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close"><i class="fa fa-close"></i></button>
    <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.Add @EduSuiteUIResources.Sla @EduSuiteUIResources.Edit@EduSuiteUIResources.BlankSpace @EduSuiteUIResources.BookCopy</h4>
</div>
@using (Html.BeginForm("AddEditBookCopy", "BookCopy", FormMethod.Post, htmlAttributes: new { @id = "frmBookCopy" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RowKey, new { @class = "hidBookCopyKey" })
    @Html.HiddenFor(m => m.BookKey)
    @Html.HiddenFor(m => m.BookCopySlNo)
    @Html.ValidationSummary(true)

    <div class="modal-body">



        <div class="form-master">
            <div class="form-row">
                <div class="paddingNone">
                    <span class="text-danger"><strong> @Html.ValidationMessage("error_msg")</strong>  </span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.ISBN, htmlAttributes: new { @id = "lblISBN", @class = "form-label" })
                        @Html.TextBoxFor(m => m.ISBN, new { @class = "form-control input-control", @InputFor = "lblISBN" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.ISBN)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.Barcode, htmlAttributes: new { @id = "lblBookBarCode", @class = "form-label" })
                        @Html.TextBoxFor(m => m.BookBarCode, new { @class = "form-control input-control", @InputFor = "lblBookBarCode" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.BookBarCode)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.Edition, htmlAttributes: new { @id = "lblBookEdition", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.BookEdition, new { @class = "form-control input-control", @InputFor = "lblBookEdition" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.BookEdition)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.PrintYear, htmlAttributes: new { @id = "lblBookPrintYear", @class = "form-label" })
                        @Html.TextBoxFor(m => m.BookPrintYear, new { @class = "form-control input-control", @InputFor = "lblBookPrintYear" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.BookPrintYear)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.NoOfPages, htmlAttributes: new { @id = "lblNoOfPages", @class = "form-label" })
                        @Html.TextBoxFor(m => m.NoOfPages, new { @class = "form-control input-control", @InputFor = "lblNoOfPages" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.NoOfPages)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.Price, htmlAttributes: new { @id = "lblBookPrice", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.BookPrice, "{0:G29}", new { @class = "form-control input-control", @InputFor = "lblBookPrice" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.BookPrice)
                        </span>
                    </fieldset>
                </div>


                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.FineAmount, htmlAttributes: new { @id = "lblFineAmount", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.FineAmount, "{0:G29}", new { @class = "form-control input-control", @InputFor = "lblFineAmount" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.FineAmount)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.BookStatus, new { @id = "lblBookStatus", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.BookStatusKey, new SelectList(Model.BookStatuses, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.BookStatus, new { @class = "form-control border-radius input-control", @InputFor = "lblBookStatus" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.BookStatusKey)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-3 col-sm-4 col-sm-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.IsActive, new { @class = "form-label" })

                        <div class="switch-check my-2">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "switch-input" })
                            <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                            <div class="switch-handle"></div>
                        </div>
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.IsActive)
                        </span>
                    </fieldset>


                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer justify-content-start">
        <div class="form-group">
            <input type="submit" value="@EduSuiteUIResources.Submit" id="btnSave" class="btn btn-sm btn-success mx-1" />
            <button type="button" data-dismiss="modal" class="btn btn-sm btn-danger mx-1">@EduSuiteUIResources.Cancel</button>

        </div>
    </div>

}

