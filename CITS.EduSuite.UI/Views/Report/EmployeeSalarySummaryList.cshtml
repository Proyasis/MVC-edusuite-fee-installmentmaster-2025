@model CITS.EduSuite.Business.Models.ViewModels.ReportViewModel
@using CITS.EduSuite.Business.Models.ViewModels

@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/StudentsSummary")
    @Scripts.Render("~/Content/DatePickerJS")
    @Scripts.Render("~/Content/ExcelExportJS")
    @Scripts.Render("~/Content/momentJS")
    @Scripts.Render("~/Scripts/BaseStudentsSearch")
}




<input type="hidden" id="hdnGetEmployeeSalarySummary" value="@Url.Action("GetEmployeeSalarySummary", "Report")" />
<input type="hidden" id="hdnGetEmployeesByBranchKeys" value="@Url.Action("GetEmployeesByBranchKeys", "Report")" />

<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.EmployeeSalary@EduSuiteUIResources.BlankSpace @EduSuiteUIResources.Summary</h3>

                    </div>
                </div>
            </div>
        </div>

    </div>
</header>
<section class="section-content mx-sm-3 mx-0">

    <div class="GridBody">
        <div class="grid-nav-bar">
            <form>
                <div class="form-row">
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.BranchKeys, new SelectList(Model.Branches, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Branch })
                        </fieldset>
                    </div>

                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.EmployeeKeys, new SelectList(Model.Employees, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Employee })
                        </fieldset>
                    </div>

                    <div class="col-lg-2 col-sm-3 col-4 ">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.DesignationKeys, new SelectList(Model.Designations, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Designation })
                        </fieldset>
                    </div>

                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.DepartmentKeys, new SelectList(Model.Departments, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Department })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.EmployeeStatusKeys, new SelectList(Model.EmployeeStatus, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_title = EduSuiteUIResources.Status })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.SalaryYearKeys, new SelectList(Model.SalaryYears, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_title = EduSuiteUIResources.SalaryYear })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.SalaryMonthKeys, new SelectList(Model.SalaryMonths, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_title = EduSuiteUIResources.SalaryMonth })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.DropDownList("PaymentStatus", new List<SelectListItem>
                    {
                        new SelectListItem{ Text=EduSuiteUIResources.Completed, Value = "1" },
                        new SelectListItem{ Text=EduSuiteUIResources.Paid, Value = "2" },
                        new SelectListItem{ Text=EduSuiteUIResources.UnPaid, Value = "3" },
                     }, EduSuiteUIResources.Payment + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Status, new { @class = "form-control input-control " })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAdded, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.DateOfJoining + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedFrom, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.FromDate + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedTo, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.ToDate + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.SearchAnyText, new { @class = "form-control input-control", @placeholder = "" + EduSuiteUIResources.Employee + EduSuiteUIResources.Coma + EduSuiteUIResources.MobileNumber + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-1 col-sm-3 col-2 ">
                        <fieldset class="form-group">
                            <button type="button" id="btnSearch" class="btnForm btnSubmit btn btn-sm btn-success">@EduSuiteUIResources.Search</button>
                        </fieldset>
                    </div>
                    <div class="col-lg-1 col-sm-3 col-2 ">
                        <a class="btn btn-info btn-sm " onclick='window.location.reload()'>
                            <i class="fa fa-refresh"></i>   Refresh
                        </a>
                    </div>
                </div>

            </form>
            <div class="form-row justify-content-between">

                <div class="col-lg-2 col-sm-3 col-4">
                    <fieldset class="form-group">
                        @Html.ListBox("ShowHideColumns", new SelectList(Model.Columns, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @onchange = "StudentSummary.GetCustomizedColumns(this)", @data_title = "Columns" })
                    </fieldset>

                </div>
                <div class="col-lg-2 col-sm-3 col-4">
                    <div class="button-group float-right">
                        <button id="btnPrint" type="button" onclick="StudentSummary.GetExportPrintData('P','#hdnGetEmployeeSalarySummary','EmployeeSalarySummary','Employee Salary Summary',true)" class="btn btn-primary btn-sm"><i class="fa fa-print btn-blue" aria-hidden="true"></i></button>
                        <button id="btnExport" type="button" onclick="StudentSummary.GetExportPrintData('E','#hdnGetEmployeeSalarySummary','EmployeeSalarySummary','Employee Salary Summary',true)" class="btn btn-success btn-sm"><i class="fa fa-file-excel-o fa-align-right" aria-hidden="true"></i></button>

                    </div>
                </div>
            </div>
        </div>

        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid" class="table table-striped"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
    var jsonDataList=@(Html.Raw(Json.Encode(Model)));
    jsonDataList["DefaultColumns"] = ["RowNumber", "VoucherNumber", "BranchName", "EmployeeName", "MobileNumber", "PaySlipFileName", "MonthlySalary", "TotalSalary", "TotalPaid", "BalanceAmount","LastPaymentDate"]
    $(document).ready(function ()
    {
        AppCommon.FormatDateInput();
        AppCommon.FormatSelect2();

        StudentSummary.GetEmployeeSalarySummary(jsonDataList);

        $('#btnSearch').on("click", function ()
        {
            StudentSummary.GetEmployeeSalarySummary(jsonDataList);
        });

        $('#SearchAnyText').on("input", function ()
        {
            StudentSummary.GetEmployeeSalarySummary(jsonDataList);
        });
        $("#BranchKeys").on("change", function () {
            BaseStudentsSearch.GetEmployeesByBranches($("#EmployeeKeys"));
        });
    });
</script>



