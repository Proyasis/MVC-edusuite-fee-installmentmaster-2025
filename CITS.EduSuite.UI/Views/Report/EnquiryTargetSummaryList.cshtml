@model CITS.EduSuite.Business.Models.ViewModels.ReportViewModel
@using CITS.EduSuite.Business.Models.ViewModels
@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/EnquiryTargetSummary")
    @Scripts.Render("~/Content/DatePickerJS")

    @Scripts.Render("~/Content/ExcelExportJS")
    @Scripts.Render("~/Content/momentJS")
}




<input type="hidden" id="hdnGetEnquiryTargetSummary" value="@Url.Action("GetEnquiryTargetSummary", "Report")" />
<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.EnquiryTarget@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Summary</h3>

                    </div>
                </div>
            </div>
        </div>

    </div>
</header>
<section class="section-content mx-sm-3 mx-0">

    <div class="GridBody">
        <div class="grid-nav-bar">
            <form>
                <div class="form-row">
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedFrom, "{0:yyyy}", new { @class = "form-control input-control", @data_input_type = "year", @readonly = "readonly" })
                        </fieldset>
                    </div>

                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            <button type="button" id="btnSearch" class="btnForm btnSubmit btn btn-sm btn-success">@EduSuiteUIResources.Search</button>
                        </fieldset>
                    </div>
                    
                </div>

            </form>
            <div class="form-row justify-content-between">

                <div class="col-lg-2 col-sm-3 col-4">
                    <fieldset class="form-group d-none">
                        @Html.ListBox("ShowHideColumns", new SelectList(Model.Columns, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @onchange = "EmployeeAttendanceReport.GetCustomizedColumns(this)", @data_title = "Columns" })
                    </fieldset>
                    <span > </span>
                </div>
                <div class="col-lg-2 col-sm-3 col-4">
                    <fieldset class="form-group float-right">
                        <span class="badge badge-success">Monthly Target</span>
                        <span class="badge badge-info">/</span>
                        <span class="badge badge-danger">Admission Taken</span>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="table-wrapper">

            <div class="jqGrid_wrapper" style="overflow-x: auto;">
                <table id="grid" class="table table-striped"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
    $(document).ready(function () {
        //var doc = new jsPDF();

        AppCommon.FormatYearInput();

        AppCommon.FormatSelect2();

        EnquiryTargetSummary.GetEnquiryTargetSummary();

        $('#btnSearch').on("click", function () {
            EnquiryTargetSummary.GetEnquiryTargetSummary();
        });

    });
</script>



