@model CITS.EduSuite.Business.Models.ViewModels.ReportViewModel
@using CITS.EduSuite.Business.Models.ViewModels

@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/AttendanceReport")
    @Scripts.Render("~/Content/DatePickerJS")

    @Scripts.Render("~/Content/ExcelExportJS")
    @Scripts.Render("~/Content/momentJS")
    @Scripts.Render("~/Scripts/BaseStudentsSearch")
}




<input type="hidden" id="hdnGetAttendanceReport" value="@Url.Action("GetAttendanceReport", "Report")" />
<input type="hidden" id="hdnGetAttendanceSummaryConvert" value="@Url.Action("GetAttendanceSummaryConvert", "Report")" />
<input type="hidden" id="hdnGetApplicationAttendance" value="@Url.Action("GetApplicationAttendance", "Report")" />
<input type="hidden" id="hdnGetApplicationAttendanceById" value="@Url.Action("GetApplicationAttendanceById", "Report")" />
<input type="hidden" id="hdnAttendancePath" value=@Url.Content("~/Templates/Report/Attendance.html") />
<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.AttendanceSummaryReport</h3>

                    </div>
                </div>
            </div>
        </div>

    </div>
</header>
<section class="section-content mx-sm-3 mx-0">

    <div class="GridBody">
        <div class="grid-nav-bar">
            <form>
                <div class="form-row tabs-section mb-2">
                    <div class="tabs-section-nav">
                        <ul id="tab-componets" class="nav nav-tabs" role="tablist">
                            <li class="nav-item"><a data-toggle="tab" data-val="1" href="#" aria-expanded="true" class="nav-link"><span class="nav-link-in">@EduSuiteUIResources.AttendanceSummaryReport </span></a></li>
                            <li class="nav-item"><a data-toggle="tab" data-val="0" href="#" aria-expanded="true" class="nav-link"><span class="nav-link-in">@EduSuiteUIResources.AffiliationsTieUps@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.AttendanceSummaryReport</span></a></li>

                        </ul>
                    </div>
                </div>

                <div class="form-row">
                    @Html.HiddenFor(m => m.RowKey)

                    @if (Model.Branches.Count == 1)
                    {
                        {
                            Model.BranchKey = (Model.BranchKey == null || Model.BranchKey == 0) ? (short)Model.Branches.Select(x => x.RowKey).FirstOrDefault() : Model.BranchKey;
                        }
                        @Html.HiddenFor(m => m.BranchKey)
                    }
                    else
                    {

                        <div class="col-6 col-sm-3 col-lg-2">
                            <fieldset class="form-group">
                                @Html.DropDownListFor(m => m.BranchKey, new SelectList(Model.Branches, "RowKey", "Text"), new { @class = "form-control input-control", @InputFor = "lblBranch" })
                                <span class="form-control-error-text">
                                    @Html.ValidationMessageFor(m => m.BranchKey)
                                </span>
                            </fieldset>
                        </div>

                    }
                    @Html.Action("Index", "BaseStudentSearch")
                    <div class="col-lg-2 col-sm-3 col-4 dvAttendace">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedFrom, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_inputmask = "'alias': 'dd/mm/yyyy'", @data_input_type = "date" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4 dvAttendace">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedTo, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_inputmask = "'alias': 'dd/mm/yyyy'", @data_input_type = "date" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4  dvUniversityAttendace" data-hidden>
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.UniversityDays, new { @class = "form-control input-control", @placeholder = EduSuiteUIResources.UniversityDays })
                        </fieldset>
                    </div>
                    <div class="col-lg-1 col-sm-4 col-6">
                        <a class="btn btn-info btn-sm float-right " onclick='window.location.reload()'>
                            <i class="fa fa-search"></i>   @EduSuiteUIResources.Refresh
                        </a>
                    </div>
                    <div class="col-lg-1 col-sm-3 col-4">
                        <div class="button-group float-right">
                            <button id="btnExport" type="button" class="btn btn-success btn-sm"><i class="fa fa-file-excel-o fa-align-right" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </div>

            </form>

        </div>

        <div class="table-wrapper dvAttendace">

            <div id="dvAttendanceReport" class="jqGrid_wrapper">

            </div>
        </div>

        <div class="table-wrapper dvUniversityAttendace" data-hidden>

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid" class="table table-striped"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
     var jsonDataList=@(Html.Raw(Json.Encode(Model)));

    $(document).ready(function () {
        //var doc = new jsPDF();

        $("#BranchKeys,#ModeKeys,#AcademicTermKey,#UniversityMasterKeys,#CourseYearsKeys,#CourseTypeKeys,#BatchKeys,#CourseKeys,#StudentStatusKeys").closest("fieldset").closest("div").hide()

        AppCommon.FormatDateInput();

        AppCommon.FormatSelect2();

        $("#tab-componets li:first-child a").addClass('active');

        var ToggleValue = $("#tab-componets li a.active").data('val');

        CheckAttendanceType(ToggleValue);

        $('#tab-componets a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            //$('#grid').jqGrid("GridUnload");
            var ToggleValue = $("#tab-componets li a.active").data('val');
            CheckAttendanceType(ToggleValue);
        });


        $('#BranchKey,#ClassKeys,#DateAddedFrom,#DateAddedTo').on("change", function () {
            var ToggleValue = $("#tab-componets li a.active").data('val');
            CheckAttendanceType(ToggleValue);
        });
        $('#SearchAnyText,#UniversityDays').on("input", function () {
            var ToggleValue = $("#tab-componets li a.active").data('val');
            CheckAttendanceType(ToggleValue);
        });
        $('#btnSearch').on("click", function () {
            var ToggleValue = $("#tab-componets li a.active").data('val');
            CheckAttendanceType(ToggleValue);
        });

        $("[id*=rblAttendanceType]").on("change", function () {
            if ($(this).val() == 0) {
                $(".dvAttendace").show();
                $(".dvUniversityAttendace").hide();
            } else {
                $(".dvAttendace").hide();
                $(".dvUniversityAttendace").show();
            }
        })
        var obj = { HtmlCntrl: $("#tblAttendance") };
        $("#btnExport").on("click", function () {
            obj.ContainerId = $('#dvAttendanceReport'),
            setExportTitle(obj)
            AppCommon.ExportTableToExcel(obj);
        });
        function setExportTitle(obj) {
           obj.Title = "Employee Attendance Summary" + ($("#BranchKey").val() != "" ? ' - ' + $("#BranchKey").find("option:selected").text() : "");
            obj.SubTitle = $("#DateAddedFrom").val() === $("#DateAddedTo").val() ? $("#DateAddedFrom").val() : $("#DateAddedFrom").val() + " - " + $("#DateAddedTo").val();
            obj.Title = obj.Title +" "+ obj.SubTitle;
        obj.FileName = (obj.Title + (obj.SubTitle ? ("_" + obj.SubTitle) : "")).replace(/-/g, '_');
        }



        function CheckAttendanceType(_this) {
            if (_this == 1) {
                $(".dvAttendace").show();
                $(".dvUniversityAttendace").hide();
                AttendanceReport.GetAttendanceReport();

            }
            else {
                $(".dvAttendace").hide();
                $(".dvUniversityAttendace").show();
                AttendanceReport.GetAttendanceReportConvert(jsonDataList);
            }
        }

    });
</script>



