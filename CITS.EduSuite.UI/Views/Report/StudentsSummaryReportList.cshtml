@model CITS.EduSuite.Business.Models.ViewModels.ReportViewModel
@using CITS.EduSuite.Business.Models.ViewModels

@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/StudentsSummary")
    @Scripts.Render("~/Content/DatePickerJS")

    @Scripts.Render("~/Content/ExcelExportJS")
    @Scripts.Render("~/Content/momentJS")
    @Scripts.Render("~/Scripts/BaseStudentsSearch")
}


<input type="hidden" id="hdnGetStudentsSummaryReports" value="@Url.Action("GetStudentsSummaryReport", "Report")" />

<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.StudentsSummary</h3>

                    </div>
                </div>
            </div>
        </div>

    </div>
</header>
<section class="section-content mx-sm-3 mx-0">

    <div class="GridBody">
        <div class="grid-nav-bar">
            <form>

                <div class="form-row">
                    @Html.HiddenFor(m => m.RowKey)
                    @Html.Action("Index", "BaseStudentSearch")

                    @if (ApplicationSettingModel.SecondLanguageEnabled)
                    {
                        <div class="col-lg-2 col-sm-3 col-4 d-none">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.SecondLanguageKeys, new SelectList(Model.SecondLanguages, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.SecoundLanguage })
                            </fieldset>
                        </div>
                    }

                    @if (ApplicationSettingModel.ReligionEnabled)
                    {
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.ReligionKeys, new SelectList(Model.Religions, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Religion })
                            </fieldset>
                        </div>
                    }

                    @if (ApplicationSettingModel.CasteEnabled)
                    {
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.CasteKeys, new SelectList(Model.Castes, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Caste })
                            </fieldset>
                        </div>
                    }

                    @if (ApplicationSettingModel.BloodGroupEnabled)
                    {
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.BloodGroupKeys, new SelectList(Model.BloodGroups, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.BloodGroup })
                            </fieldset>
                        </div>
                    }

                    @if (ApplicationSettingModel.ClassRequired)
                    {
                        <div class="col-lg-2 col-sm-3 col-4 d-none">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.ClassModeKeys, new SelectList(Model.ClassModes, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.ClassMode })
                            </fieldset>
                        </div>
                    }

                    @if (ApplicationSettingModel.NatureOfEnquiryEnabled)
                    {
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.NatureOfEnquiryKeys, new SelectList(Model.NatureOfEnquiries, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.NatureOfEnquiry })
                            </fieldset>
                        </div>
                    }


                    @if (ApplicationSettingModel.AgentEnabled)
                    {
                        <div class="col-lg-2 col-sm-3 col-4 d-none">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.AgentKeys, new SelectList(Model.Agents, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Agent })
                            </fieldset>
                        </div>
                    }

                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.DropDownList("GenderKey", new List<SelectListItem>
                    {
                        new SelectListItem{ Text=EduSuiteUIResources.Male, Value = "1" },
                        new SelectListItem{ Text=EduSuiteUIResources.Female, Value = "2" },
                     }, EduSuiteUIResources.Gender, new { @class = "form-control input-control " })
                        </fieldset>
                    </div>


                    @if (ApplicationSettingModel.TaxRequired)
                    {
                        {
                            Model.IsTaxKey = 1;
                        }
                        @Html.HiddenFor(m => Model.IsTaxKey)
                    }
                    else
                    {
                        if (ApplicationSettingModel.TaxEnabled)
                        {
                            <div class="col-lg-2 col-sm-3 col-4">
                                <fieldset class="form-group">
                                    @Html.DropDownList("IsTaxKey", new List<SelectListItem>
                            {
                                new SelectListItem{ Text=EduSuiteUIResources.Yes, Value = "1" },
                                new SelectListItem{ Text=EduSuiteUIResources.No, Value = "0" },
                             }, EduSuiteUIResources.Taxable, new { @class = "form-control input-control " })
                                </fieldset>
                            </div>
                        }
                        else
                        {
                            {
                                Model.IsTaxKey = 0;
                            }
                            @Html.HiddenFor(m => Model.IsTaxKey)
                        }

                    }
                    @if (ApplicationSettingModel.FeeInstallmentRequired)
                    {
                        {
                            Model.IsInstallmentKey = 1;
                        }
                        @Html.HiddenFor(m => Model.IsInstallmentKey)
                    }
                    else
                    {
                        if (ApplicationSettingModel.FeeInstallmentEnabled)
                        {
                            <div class="col-lg-2 col-sm-3 col-4">
                                <fieldset class="form-group">
                                    @Html.DropDownList("IsInstallmentKey", new List<SelectListItem>
                            {
                                new SelectListItem{ Text=EduSuiteUIResources.Yes, Value = "1" },
                                new SelectListItem{ Text=EduSuiteUIResources.No, Value = "0" },
                             }, EduSuiteUIResources.Installment, new { @class = "form-control input-control " })

                                </fieldset>
                            </div>
                        }
                        else
                        {
                            {
                                Model.IsInstallmentKey = 0;
                            }
                            @Html.HiddenFor(m => Model.IsInstallmentKey)
                        }
                    }

                    @if (ApplicationSettingModel.ConcessionRequired)
                    {
                        {
                            Model.IsConsessionKey = 1;
                        }
                        @Html.HiddenFor(m => Model.IsConsessionKey)
                    }
                    else
                    {
                        if (ApplicationSettingModel.ConcessionEnabled)
                        {
                            <div class="col-lg-2 col-sm-3 col-4">
                                <fieldset class="form-group">
                                    @Html.DropDownList("IsConsessionKey", new List<SelectListItem>
                        {
                            new SelectListItem{ Text=EduSuiteUIResources.Yes, Value = "1" },
                            new SelectListItem{ Text=EduSuiteUIResources.No, Value = "0" },
                         }, EduSuiteUIResources.Concession, new { @class = "form-control input-control " })

                                </fieldset>
                            </div>
                        }
                        else
                        {
                            {
                                Model.IsConsessionKey = 0;
                            }
                            @Html.HiddenFor(m => Model.IsConsessionKey)
                        }
                    }


                    @if (ApplicationSettingModel.IncomeGroupEnabled)
                    {
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.IncomeGroupKeys, new SelectList(Model.Incomes, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.IncomeGroup })
                            </fieldset>
                        </div>
                    }

                    @if (ApplicationSettingModel.RegistrationCatagoryEnabled)
                    {
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.RegistrationCatagoryKeys, new SelectList(Model.RegistrationStatus, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.RegistrationCatagory })
                            </fieldset>
                        </div>
                    }
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.DropDownList("IsEnquiryKey", new List<SelectListItem>
                    {
                        new SelectListItem{ Text=EduSuiteUIResources.Yes, Value = "Y" },
                        new SelectListItem{ Text=EduSuiteUIResources.No, Value = "N" },
                     }, EduSuiteUIResources.Enquiry, new { @class = "form-control input-control " })

                        </fieldset>
                    </div>
                    @*<div class="col-lg-2 col-sm-3 col-4">
            <fieldset class="form-group">
                @Html.TextBoxFor(m => m.DateAdded, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.DateOfAdmission + "" })
            </fieldset>
        </div>*@

                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedFrom, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.FromDate + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedTo, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.ToDate + "" })
                        </fieldset>
                    </div>

                    <div class="col-lg-1 col-sm-3 col-2 ">
                        <fieldset class="form-group">
                            <button type="button" id="btnSearch" class="btnForm btnSubmit btn btn-sm btn-success">@EduSuiteUIResources.Search</button>
                        </fieldset>
                    </div>
                    <div class="col-lg-1 col-sm-3 col-2 ">
                        <a class="btn btn-info btn-sm float-right " onclick='window.location.reload()'>
                            <i class="fa fa-refresh"></i>   Refresh
                        </a>
                    </div>
                </div>

            </form>
            <div class="form-row justify-content-between">

                <div class="col-lg-2 col-sm-3 col-4">
                    <fieldset class="form-group">
                        @Html.ListBox("ShowHideColumns", new SelectList(Model.Columns, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @onchange = "StudentSummary.GetCustomizedColumns(this)", @data_title = "Columns" })
                    </fieldset>

                </div>
                <div class="col-lg-2 col-sm-3 col-4">
                    <div class="button-group float-right">
                        <button id="btnPrint" type="button" onclick="StudentSummary.GetExportPrintData('P','#hdnGetStudentsSummaryReports','StudentsSummaryReport','Students Summary Report',true)" class="btn btn-primary btn-sm"><i class="fa fa-print btn-blue" aria-hidden="true"></i></button>
                        <button id="btnExport" type="button" onclick="StudentSummary.GetExportPrintData('E','#hdnGetStudentsSummaryReports','StudentsSummaryReport','Students Summary Report',true)" class="btn btn-success btn-sm"><i class="fa fa-file-excel-o fa-align-right" aria-hidden="true"></i></button>

                    </div>
                </div>
            </div>
        </div>

        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid" class="table table-striped"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
    var jsonDataList=@(Html.Raw(Json.Encode(Model)));
    jsonDataList["DefaultColumns"] = ["RowNumber","AdmissionNo", "Name", "CourseType", "Course", "Mobile", "Affiliations", "CurrentYearText", "StudentStatus","Gender"]
    $(document).ready(function ()
    {
        //var doc = new jsPDF();

        AppCommon.FormatDateInput();
        AppCommon.FormatSelect2();

        StudentSummary.GetStudentSummary(jsonDataList);

        $('#btnSearch').on("click", function ()
        {
            StudentSummary.GetStudentSummary(jsonDataList);
        });

        $('#SearchAnyText').on("input", function ()
        {
            StudentSummary.GetStudentSummary(jsonDataList);
        });

        //$("#btnp").on("click", function () {
        //    $("#grid").jqGrid("exportToHtml", {
        //        includeLabels: true,
        //        includeGroupHeader: true,
        //        includeFooter: true,
        //        autoPrint: true
        //    });
        //});
        $("#btnp").on("click", function () {
            $("#grid").jqGrid("jqGridExport", {
                title: 'jqGrid Export to PDF',
                orientation: 'portrait',
                pageSize: 'A4',
                description: 'description of the exported document',
                customSettings: null,
                download: 'download',
                includeLabels: true,
                includeGroupHeader: true,
                includeFooter: true,
                fileName: "jqGridExport.pdf"
            })
        })
    });
</script>



