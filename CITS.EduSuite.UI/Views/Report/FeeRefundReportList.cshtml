@model CITS.EduSuite.Business.Models.ViewModels.ReportViewModel
@using CITS.EduSuite.Business.Models.ViewModels

@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/StudentsSummary")
    @Scripts.Render("~/Content/DatePickerJS")

    @Scripts.Render("~/Content/ExcelExportJS")
    @Scripts.Render("~/Content/momentJS")
    @Scripts.Render("~/Scripts/BaseStudentsSearch")
}




<input type="hidden" id="hdnGetFeeRefundSummary" value="@Url.Action("GetFeeRefundSummary", "Report")" />
<input type="hidden" id="hdnGetStudentRefundDetails" value="@Url.Action("GetStudentRefundDetails", "Report")" />
<input type="hidden" id="hdnGetExportStudentsSummaryReport" value="@Url.Action("GetExportStudentsSummaryReport", "Report")" />


<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.StudentFeeRefund@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Summary</h3>

                    </div>
                </div>
            </div>
        </div>

    </div>
</header>
<section class="section-content mx-sm-3 mx-0">

    <div class="GridBody">
        <div class="grid-nav-bar">
            <form>
                <div class="form-row tabs-section mb-2">
                    <div class="tabs-section-nav">
                        <ul id="tab-componets" class="nav nav-tabs" role="tablist">
                            <li class="nav-item"><a data-toggle="tab" data-val="1" href="#" aria-expanded="true" class="nav-link"><span class="nav-link-in">Fee Refund </span></a></li>
                            <li class="nav-item"><a data-toggle="tab" data-val="0" href="#" aria-expanded="true" class="nav-link"><span class="nav-link-in">Pending Refund</span></a></li>

                        </ul>
                    </div>
                </div>
                <div class="form-row">
                    @Html.HiddenFor(m => m.RowKey)
                    @Html.HiddenFor(m => m.FeeRefundTabKey)
                    @Html.Action("Index", "BaseStudentSearch")

                    <div class="col-lg-2 col-sm-3 col-4 dvFeetype">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.FeeTypeKeys, new SelectList(Model.FeeTypes, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.FeeType })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.DropDownListFor(m => m.PaymentStatus, new SelectList(Model.PaymentStatuses, "RowKey", "Text"), EduSuiteUIResources.Payment + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Status, new { @class = "form-control input-control " })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.DropDownListFor(m => m.ProcessStatusKey, new SelectList(Model.ProcessStatuses, "RowKey", "Text"), EduSuiteUIResources.Process + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Status, new { @class = "form-control input-control " })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4 d-none">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.PercentageFrom, new { @class = "form-control input-control", @InputFor = "lblEnquiryDateOfAdmission", @placeholder = "Percentage From" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4 d-none">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.PercentageTo, new { @class = "form-control input-control", @InputFor = "lblEnquiryDateOfAdmission", @placeholder = "Percentage To" })
                        </fieldset>
                    </div>

                    <div class="col-lg-1 col-sm-3 col-4">
                        <fieldset class="form-group">
                            <button type="button" id="btnSearch" class="btnForm btnSubmit btn btn-sm btn-success">@EduSuiteUIResources.Search</button>
                        </fieldset>
                    </div>
                    <div class="col-lg-1 col-sm-3 col-2 ">
                        <a class="btn btn-info btn-sm float-right " onclick='window.location.reload()'>
                            <i class="fa fa-refresh"></i>   Refresh
                        </a>
                    </div>
                </div>

            </form>
            <div class="form-row justify-content-between">

                <div class="col-lg-2 col-sm-3 col-4">
                    <div class="form-group">
                        @Html.ListBox("ShowHideColumns", new SelectList(Model.Columns, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @data_live_search = "true", @onchange = "StudentSummary.GetCustomizedColumns(this)", @data_title = "Columns" })
                    </div>

                </div>
                <div class="col-lg-2 col-sm-3 col-4">
                    <div class="button-group float-right">
                        <button id="btnPrint" type="button" onclick="StudentSummary.GetExportPrintDynamicData('P','#hdnGetFeeRefundSummary','StudentFeeRefundReport','Student Fee Refund Report')" class="btn btn-primary btn-sm"><i class="fa fa-print btn-blue" aria-hidden="true"></i></button>
                        <button id="btnExport" type="button" onclick="StudentSummary.GetExportPrintDynamicData('E','#hdnGetFeeRefundSummary','StudentFeeRefundReport','Student Fee Refund Report')" class="btn btn-success btn-sm"><i class="fa fa-file-excel-o fa-align-right" aria-hidden="true"></i></button>

                    </div>
                </div>
            </div>
        </div>

        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid" class="table table-striped"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
    var jsonDataList =@(Html.Raw(Json.Encode(Model)));
    
   // jsonDataList["DefaultColumns"] = ["AdmissionNo", "Name", "CourseType", "Course", "Affiliations", "CurrentYearText", "StudentStatus", "StudentTotalFee", "TotalPaid", "BalanceAmount", "RefundDate", "RefundAmount", "ProcessStatus","RefundBy"]


    $(document).ready(function ()
    {
        //var doc = new jsPDF();

        AppCommon.FormatDateInput();
        AppCommon.FormatSelect2();
        $("#tab-componets li:first-child a").addClass('active');

        var ToggleValue = $("#tab-componets li a.active").data('val');

        CheckReportType(ToggleValue);
        $('#btnSearch').on("click", function ()
        {
            StudentSummary.GetStudentFeeRefundSummary(jsonDataList);
        });

        $('#SearchAnyText').on("input", function ()
        {
            StudentSummary.GetStudentFeeRefundSummary(jsonDataList);
        });
        $('#tab-componets a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            //$('#grid').jqGrid("GridUnload");
            var ToggleValue = $("#tab-componets li a.active").data('val');
            CheckReportType(ToggleValue);
        });

        function CheckReportType(_this) {
            if (_this == 1) {
                $(".dvFeetype").hide();
                $("#FeeRefundTabKey").val(1);
                StudentSummary.GetStudentFeeRefundSummary(jsonDataList);

            }
            else {
                $(".dvFeetype").show();
                $("#FeeRefundTabKey").val(2);
               
                StudentSummary.GetStudentFeeRefundSummary(jsonDataList);
            }
        }

    });
</script>
