@model CITS.EduSuite.Business.Models.ViewModels.TransactionTypeViewModel


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/TransactionType")
}
@using (Html.BeginForm("AddEditTransactionType", "TransactionType", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RowKey)
    @Html.ValidationSummary(true)


    <div class="col-12 PageHeading paddingNone">
        <div class="col-xs-6 ">
            <h5 class="TopHead">  <i class="fa fa-user" aria-hidden="true"></i> @EduSuiteUIResources.Add @EduSuiteUIResources.Sla @EduSuiteUIResources.Edit @EduSuiteUIResources.TransactionType</h5>
        </div>
        <div class="col-xs-6 paddingNone">
            <a onclick="location.href='@Url.Action("TransactionTypeList", "TransactionType")' " class="btn btnAddNew btnAdd fRight">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>  @EduSuiteUIResources.Backto @EduSuiteUIResources.TransactionType
            </a>
        </div>
    </div>

    <div class="col-md-12 topMarginSpace  form-master">
        <div class="col-12  paddingNone">
            <div class=" formHead paddingNone">
                <h1><i class="fa fa-life-saver"></i> @EduSuiteUIResources.TransactionType @EduSuiteUIResources.Details</h1>
            </div>
            <div class="col-12 mandatoryHead ">
                <span>Fields marked as <span class="mandatoryStar"> * </span> are Mandatory </span>
            </div>
        </div>
        <div class="col-12 formMaster paddingNone">
            <div class="col-12 paddingNone">
                <div class="col-6 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.TransactionType + @EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Name)
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.TransactionTypeName, new { @class = "form-control border-radius" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.TransactionTypeName)
                        </span>
                    </div>
                    <div class="form-group">

                        @Html.Label(EduSuiteUIResources.TransactionType + @EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Local + @EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Name)
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.TransactionTypeNameLocal, new { @class = "form-control border-radius" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.TransactionTypeNameLocal)
                        </span>
                    </div>

                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.Status, new { @class = "lblNames" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.StatusKey, new SelectList(Model.Statuses, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Status, new { @class = "input-control form-control selectpicker" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.StatusKey)
                        </span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <input type="submit" value="@EduSuiteUIResources.Save" id="btnSave" class="btn btn-sm btn-success mx-1 " />
                        <input type="button" value="@EduSuiteUIResources.Cancel" onclick="location.href='@Url.Action("TransactionTypeList", "TransactionType")' " class="btnForm btnCancel btn btn-sm btn-default " />
                    </div>
                    <div class="col-12 paddingNone">
                        <span class="text-danger"><strong> @Html.ValidationMessage("error_msg")</strong>  </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}