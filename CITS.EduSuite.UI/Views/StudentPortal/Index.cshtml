@model CITS.EduSuite.Business.Models.ViewModels.LoginModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<link href="~/Content/font-awesome.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>

<div class="limiter section home-5-bg">
    <div id="particles-js"></div>
    <div class="bg-overlay"></div>
    <div class="container-login100">
        <div class="wrap-login100" id="Login_Content">

            <div class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <img src="~/Images/student_Login1.jpg" alt="IMG">
            </div>

            @using (Html.BeginForm("Login", "Login", new { area = "" }, FormMethod.Post, new { @class = "login100-form validate-form" }))
            {
                <div class="sign-avatar">
                    <img src="~/Images/edusuitelogo.png" alt="logo" style="border-radius:0px;width:100px" />
                </div>
                <span class="login100-form-title">
                    Student Login
                </span>
                <div class=" wrap-input100 validate-input">
                    @Html.TextBoxFor(m => m.LoginUsername, new { @class = "input100", @placeholder = EduSuiteUIResources.UserName })
                    <span class="form-control-error-text"> @Html.ValidationMessageFor(m => m.LoginUsername)</span>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <div class=" wrap-input100 validate-input">
                    @Html.TextBoxFor(m => m.LoginPassword, new { @class = "input100", @placeholder = EduSuiteUIResources.Login_Password, @type = "password" })
                    <span class="form-control-error-text">  @Html.ValidationMessageFor(m => m.LoginPassword)</span>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="form-group d-none">
                    <div class="checkbox float-left">
                        <input type="checkbox" id="signed-in" />
                        <label for="signed-in">Keep me signed in</label>
                    </div>
                    <div class="float-right reset">
                        <a href="reset-password.html">Reset Password</a>
                    </div>
                </div>
                @Html.HiddenFor(m => m.RoleKey)

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">@EduSuiteUIResources.Login_Login</button>
                </div>
                <div class="text-center pt-5">
                    <span class="txt1">
                        Forgot
                    </span>
                    <a class="txt2" href="#">

                        @Html.ActionLink(EduSuiteUIResources.ForgotPassword, "ForgotPassword", "Login")@EduSuiteUIResources.QuostionMark
                    </a>
                </div>

                <span class="form-error-text"> @Html.ValidationMessage("error_msg")</span>
            }
        </div>

    </div>
</div>
