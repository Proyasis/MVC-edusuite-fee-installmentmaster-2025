@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/Scripts/TestPaper")
    @Scripts.Render("~/Scripts/ExamTest")
}

<input type="hidden" id="hdnGetExamValuation" value="@Url.Action("GetExamValuation", "TestPaper")" />
<input type="hidden" id="hdnExamValuationFilePath" value=@Url.Content("~/Templates/ExamTemplate/ExamValuation.html") />
<input type="hidden" id="hdnAddEditTestValuation" value="@Url.Action("AddEditTestValuation", "TestPaper")" />
<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.TestValuation</h3>

                    </div>
                </div>
            </div>
        </div>

    </div>
</header>
<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar form-row justify-content-between">
            <div class="col-lg-3 col-6">
                <input id="txtsearch" type="text" name="focus" class="input-control form-control form-control-sm" placeholder="@EduSuiteUIResources.Search @EduSuiteUIResources.TestPaper" /> @* Change Search TextBox Placeholder*@
                <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
            </div>

            <div class="col-6">
                <a class="btn btn-info btn-sm float-right" onclick='TestPaper.GetExamValuation()'>
                    <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                </a>
            </div>

        </div>
        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <div id="dvStudentView" class="form-row"></div>
            </div>
            <div class="form-row mt-2">
                <div class="col-12">
                    <div id="page-selection" class="float-right"></div>
                </div>
            </div>
        </div>


    </div>
</section>



<script>
    var TestModules=@(Html.Raw(Json.Encode(ViewBag.TestModules)));
    $(document).ready(function () {
        $("#txtsearch").keydown(function () {
            TestPaper.GetExamValuation();
        });
        $("#txtsearch").keyup(function () {
            TestPaper.GetExamValuation();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            TestPaper.GetExamValuation();
        });
        TestPaper.GetExamValuation();
    });
</script>



