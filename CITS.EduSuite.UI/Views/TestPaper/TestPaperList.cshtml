

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/Scripts/TestPaper")
}

<input type="hidden" id="hdnGetTestPaper" value="@Url.Action("GetTestPapers", "TestPaper")" />
<input type="hidden" id="hdnDeleteTestPaper" value="@Url.Action("DeleteTestPaper", "TestPaper")" />
<input type="hidden" id="hdnAddEditTestPaper" value="@Url.Action("AddEditTestPaper", "TestPaper")" />
<input type="hidden" id="hdnAddEditTestInstruction" value="@Url.Action("AddEditTestInstruction", "TestPaper")" />
<input type="hidden" id="hdnAddEditAnswerKey" value="@Url.Action("AddEditAnswerKey", "TestPaper")" />


<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.TestPaper</h3>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 text-right">
            <a id="addEditBranch" href="@Url.Action("AddEditTestPaper", "TestPaper")" class="btn btn-success btn-sm "><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New @EduSuiteUIResources.BlankSpace @EduSuiteUIResources.TestPaper</span></a>
        </div>
    </div>
</header>
<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar form-row justify-content-between">
            <div class="col-lg-2 col-6">
                <input id="txtsearch" type="text" name="focus" class="input-control form-control form-control-sm" placeholder="@EduSuiteUIResources.Search @EduSuiteUIResources.TestPaper" /> @* Change Search TextBox Placeholder*@
                <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
            </div>

            <div class="col-6">
                <a class="btn btn-info btn-sm float-right" onclick='TestPaper.GetTestPaper()'>
                    <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                </a>
            </div>

        </div>
        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid"></table>
                <div id="pager"></div>
            </div>
        </div>


    </div>
</section>



<script>
    $(document).ready(function () {
        $("#txtsearch").keydown(function () {
            TestPaper.GetTestPaper();
        });
        $("#txtsearch").keyup(function () {
            TestPaper.GetTestPaper();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            TestPaper.GetTestPaper();
        });
        TestPaper.GetTestPaper();
    });
</script>



