@model CITS.EduSuite.Business.Models.ViewModels.DistrictViewModel

<div class="modal-header">
    <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close"><i class="fa fa-close"></i></button>
    <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.Add @EduSuiteUIResources.Sla @EduSuiteUIResources.Edit @EduSuiteUIResources.District</h4>
</div>
@using (Html.BeginForm("AddEditDistrict", "District", FormMethod.Post, htmlAttributes: new { @id = "frmDistrict" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RowKey, new { @class = "hidDistrictKey" })
    @Html.ValidationSummary(true)

    <input type="hidden" id="hdnGetProvinceByCountry" value="@Url.Action("GetProvinceByCountry", "District")" />
    <div class="modal-body">
        <div class="form-master">
            <div class="paddingNone">
                <span class="ValidateDataMsg"> @Html.ValidationMessage("error_msg")  </span>
            </div>

            <div class="form-row">
                <div class="col-sm-4 col-6">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.District + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Name, htmlAttributes: new { @id = "lblDistrictName", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.Districtname, new { @class = "input-control form-control form-control-sm", @InputFor = "lblDistrictName" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.Districtname)
                        </span>
                    </div>
                </div>

                <div class="col-sm-4 col-6">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.District + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Local + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Name, htmlAttributes: new { @id = "lblDistrictNameLocal", @class = "form-label" })
                        @Html.TextBoxFor(m => m.DistrictnameLocal, new { @class = "input-control form-control form-control-sm", @InputFor = "lblDistrictNameLocal" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.DistrictnameLocal)
                        </span>
                    </div>
                </div>
                <div class="col-sm-4 col-6">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.Country, htmlAttributes: new { @id = "lblCountry", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.CountryKey, new SelectList(Model.Countries, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Province, new { @class = "input-control form-control form-control-sm", @InputFor = "lblCountry", @id = "ddlCountry" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.CountryKey)
                        </span>
                    </div>
                </div>
                <div class="col-sm-4 col-6">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.Province, htmlAttributes: new { @id = "lblLanguage", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.ProvinceKey, new SelectList(Model.Provinces, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Province, new { @class = "input-control form-control form-control-sm", @InputFor = "lblProvince", @id = "ddlProvince" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.ProvinceKey)
                        </span>
                    </div>
                </div>

                <div class="col-lg-4 col-6 text-lg-center">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.IsActive, new { @class = "form-label" })

                        <div class="switch-check my-2">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "switch-input" })
                            <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                            <div class="switch-handle"></div>
                        </div>
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.IsActive)
                        </span>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <div class="modal-footer justify-content-start">
        <div class="form-group">
            <button type="submit" id="btnSave" class="btn btn-sm btn-success mx-1"><i class="fa fa-save"></i> @EduSuiteUIResources.Save</button>
            <button type="button" data-dismiss="modal" class="btn btn-sm btn-danger mx-1"><i class="fa fa-close"></i>@EduSuiteUIResources.Cancel</button>

        </div>
    </div>

}





