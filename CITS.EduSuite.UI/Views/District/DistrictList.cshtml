

@model CITS.EduSuite.Business.Models.ViewModels.DistrictViewModel
@using System.Web.Mvc
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/Scripts/District")
}
<input type="hidden" id="hdnGetDistrictList" value="@Url.Action("GetDistrict", "District")" />
<input type="hidden" id="hdnDeleteDistrict" value="@Url.Action("DeleteDistrict", "District")" />
<input type="hidden" id="hdnAddEditDistrict" value="@Url.Action("AddEditDistrict", "District")" />


<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.District</h3>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 text-right">
            <a id="addEditDistrict" data-href="@Url.Action("AddEditDistrict", "District")" onclick="District.EditPopup(this)" class="btn btn-success btn-sm"><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New @EduSuiteUIResources.BlankSpace @EduSuiteUIResources.District</span></a>
        </div>
    </div>
</header>
<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar form-row justify-content-between">
            <div class="col-lg-3 col-6">
                <input id="txtsearch" type="text" name="focus" class="form-control" placeholder="@EduSuiteUIResources.Search@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.District" /> @* Change Search TextBox Placeholder*@
                <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>

            </div>

            <div class="col-6">
                <a class="btn btn-info btn-sm float-right" onclick='District.GetDistrict()'>
                    <i class="fa fa-refresh"></i>   Refresh
                </a>
            </div>

        </div>

        <div class="table-wrapper">
            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid"></table>
                <div id="pager"></div>
            </div>
        </div>

    </div>
</section>


<script>
    $(document).ready(function () {
        $("#txtsearch").keydown(function () {
            District.GetDistrict();
        });
        $("#txtsearch").keyup(function () {
            District.GetDistrict();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            District.GetDistrict();
        });
        District.GetDistrict();
       
    });
</script>





