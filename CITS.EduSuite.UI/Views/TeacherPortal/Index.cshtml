@using CITS.EduSuite.Business.Models.ViewModels
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CitsValidation")
    @Scripts.Render("~/Content/DatePickerJS")
    @Scripts.Render("~/Content/JqueryRepeater")
    @Scripts.Render("~/Content/momentJS")
    @Scripts.Render("~/Scripts/TeacherPortal")
    @Scripts.Render("~/Scripts/Attendance")
    @Scripts.Render("~/Scripts/WorkSchedule")
    @Scripts.Render("~/Scripts/UnitTestSchedule")
    @Scripts.Render("~/Scripts/StudentDiary")
    @Scripts.Render("~/Scripts/Application")
    @Scripts.Render("~/Scripts/ApplicationFeePayment")
    @Scripts.Render("~/Scripts/AttendanceReport")
    @Scripts.Render("~/Scripts/ChartJS")
    @Scripts.Render("~/Content/BootstrapTableJS")
    @Scripts.Render("~/bundles/lightbox")
}
<input type="hidden" id="hdnClassesPath" value=@Url.Content("~/Templates/TeacherPortal/Classes.html") />
