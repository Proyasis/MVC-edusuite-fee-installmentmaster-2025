
@using System.Web.Mvc
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/CourseSubject")
    @Scripts.Render("~/Content/DatePickerJS")
    @Scripts.Render("~/Content/MultiselectJs")


}
<input type="hidden" id="hdnGetCourseSubject" value="@Url.Action("GetCourseSubject", "CourseSubject")" />
<input type="hidden" id="hdnDeleteCourseSubjectAll" value="@Url.Action("DeleteCourseSubjectAll", "CourseSubject")" />
<input type="hidden" id="hdnAddEditCourseSubject" value="@Url.Action("AddEditCourseSubject", "CourseSubject")" />



<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.CourseSubject</h3>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 text-right">
            <a href="@Url.Action("AddEditCourseSubject", "CourseSubject")" class="btn btn-success btn-sm "><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New @EduSuiteUIResources.BlankSpace @EduSuiteUIResources.CourseSubject</span></a>
        </div>
    </div>
</header>
<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar form-row justify-content-between">
            <div class="col-sm-3 col-6">
                <input id="txtsearch" type="text" name="focus" class="form-control gridSearchTextBox" placeholder="@EduSuiteUIResources.Search" />

                <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
            </div>

            <div class="col-6">
                <a class="btn btn-info btn-sm float-right " onclick='window.location.reload()'>
                    <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                </a>
            </div>

        </div>

        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid"></table>
                <div id="pager"></div>
            </div>
        </div>


    </div>
</section>

<script>
    $(document).ready(function () {

        AppCommon.FormatDateInput();
        //$("#txtsearchDate").datepicker("setDate", new Date());

        $("#txtsearch").on("input", function () {
            CourseSubject.GetCourseSubject();
        });
        //$("#txtsearchDate").on("changeDate", function () {
        //    CourseSubject.GetCourseSubject();
        //})

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            //$('#txtsearchDate').val('');

            CourseSubject.GetCourseSubject();
        });
        CourseSubject.GetCourseSubject();
        //AppCommon.EditGridPopup($("#addEditStudentsPromotion"))

       



    });
</script>

