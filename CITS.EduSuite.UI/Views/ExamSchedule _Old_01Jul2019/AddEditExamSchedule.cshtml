@model CITS.EduSuite.Business.Models.ViewModels.ExamScheduleViewModel
@using CITS.EduSuite.UI.Resources
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/JqueryRepeater")
    @Scripts.Render("~/Scripts/Common")
    @Scripts.Render("~/bundles/CitsValidation")
    @Scripts.Render("~/Scripts/ExamSchedule")
    @Scripts.Render("~/Content/DatePickerJS")
    @Scripts.Render("~/Content/BootstrapSelectJS")
}


<input type="hidden" id="hdnFillCourse" value="@Url.Action("FillCourse", "ExamSchedule")" />
<input type="hidden" id="hdnFillCourseYear" value="@Url.Action("FillCourseYear", "ExamSchedule")" />
<input type="hidden" id="hdnFillUniversity" value="@Url.Action("FillUniversity", "ExamSchedule")" />
<input type="hidden" id="hdnStudentPromotionList" value="@Url.Action("ExamScheduleList", "ExamSchedule")" />
<input type="hidden" id="hdnFillBatch" value="@Url.Action("FillBatch", "ExamSchedule")" />
<input type="hidden" id="hdnUrl" value="@Url.Action("GetExamSchedule", "ExamSchedule", new { id = "" })" />
<input type="hidden" id="hdnResetExamSchedule" value="@Url.Action("ResetExamSchedule", "ExamSchedule")" />
<input type="hidden" id="hdnFillSubjects" value="@Url.Action("FillSubjects", "ExamSchedule")" />



<header class="section-header">
    <div class="row px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@CITSEduSuiteUIResources.Add@CITSEduSuiteUIResources.Hyphen@CITSEduSuiteUIResources.Edit@CITSEduSuiteUIResources.BlankSpace@CITSEduSuiteUIResources.ExamSchedule</h3>
                        <ol class="breadcrumb breadcrumb-simple float-right mb-2">
                            <li><a href="#" onclick="location.href='@Url.Action("ExamScheduleList", "ExamSchedule")' ">@CITSEduSuiteUIResources.ExamSchedule</a></li>
                            <li class="active">@CITSEduSuiteUIResources.Add@CITSEduSuiteUIResources.Hyphen@CITSEduSuiteUIResources.Edit@CITSEduSuiteUIResources.BlankSpace@CITSEduSuiteUIResources.ExamSchedule</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section class="section-content mx-sm-3 mx-0">
    <div class="form-master">

        @using (Html.BeginForm("AddEditExamSchedule", "ExamSchedule", FormMethod.Post, new { @id = "frmExamSchedule" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.RowKey)

            <div class="form-row">
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.Branch, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.BranchKey, new SelectList(Model.Branches, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.Branch, new { @class = "form-control border-radius input-control autoselect-select" })<span class="form-control-error-text">

                            @Html.ValidationMessageFor(m => m.BranchKey)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.AcademicTerm, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.AcademicTermKey, new SelectList(Model.AcademicTerms, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.AcademicTerm, new { @class = "form-control border-radius input-control autoselect-select" })<span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.AcademicTermKey)
                        </span>
                    </fieldset>

                </div>



                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.CourseType, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.CourseTypeKey, new SelectList(Model.CourseTypes, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.CourseType, new { @class = "form-control border-radius input-control autoselect-select" })<span class="form-control-error-text">

                            @Html.ValidationMessageFor(m => m.CourseTypeKey)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.Course, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.CourseKey, new SelectList(Model.Courses, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.Course, new { @class = "form-control border-radius input-control autoselect-select" })<span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.CourseKey)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.AffiliationsTieUps, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.UniversityMasterKey, new SelectList(Model.Universities, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.AffiliationsTieUps, new { @class = "form-control border-radius input-control autoselect-select" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.UniversityMasterKey)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.Year, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.CourseYear, new SelectList(Model.CourseYears, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.Year, new { @class = "form-control border-radius input-control autoselect-select" })<span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.CourseYear)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.Subject, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.SubjectKey, new SelectList(Model.Subjects, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.Subject, new { @class = "form-control border-radius input-control autoselect-select" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => Model.SubjectKey)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.Batch, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.BatchKey, new SelectList(Model.Batches, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.Batch, new { @class = "form-control border-radius input-control autoselect-select" })

                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.BatchKey)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.ExamTerm, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.ExamTermKey, new SelectList(Model.ExamTerm, "RowKey", "Text"), CITSEduSuiteUIResources.Select + CITSEduSuiteUIResources.BlankSpace + CITSEduSuiteUIResources.ExamTerm, new { @class = "form-control border-radius input-control autoselect-select" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.ExamTermKey)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.ExamDate, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.ExamDate, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @data_inputmask = "'alias': 'dd/mm/yyyy'" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.ExamDate)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.MinimumMark, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.MinimumMark, new { @class = "form-control input-control" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.MinimumMark)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.MaximumMark, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.MaximumMark, new { @class = "form-control input-control" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.MaximumMark)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.StartTime, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ExamStartTime, new { @class = "form-control input-control", @data_input_type = "time", @data_inputmask = "'alias':'hh:mm t','hourFormat': '12'", @InputFor = "lblCallDuration" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.ExamStartTime)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(CITSEduSuiteUIResources.EndTime, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ExamEndTime, new { @class = "form-control input-control", @data_input_type = "time", @data_inputmask = "'alias':'hh:mm t','hourFormat': '12'", @InputFor = "lblCallDuration" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.ExamEndTime)
                        </span>
                    </fieldset>
                </div>
            </div>
            <div id="dvStudentsList"></div>


            <div class="row mt-2">
                <div class="form-group">
                    <div class="col-12">
                        <fieldset class="form-group">
                            <input type="button" value="@CITSEduSuiteUIResources.Save" id="btnSave" class="btn btn-sm btn-success mx-1" />
                            <input type="button" value="@CITSEduSuiteUIResources.Cancel" onclick="location.href='@Url.Action("ExamScheduleList", "ExamSchedule")' " class="btn btn-sm btn-danger mx-1" />
                        </fieldset>
                        <div class="col-12 paddingNone">
                            <span class="ValidateDataMsg"> @Html.ValidationMessage("error_msg")  </span>
                        </div>
                    </div>


                </div>

            </div>
        }
    </div>
</section>
<script>
    var jsonData=@(Html.Raw(Json.Encode(Model)));
   
    $(document).ready(function () {
        AppCommon.FormatInputCase();
        AppCommon.FormatMultiSelect();
        AppCommon.FormatDateInput();
        AppCommon.CustomRemoteMethod();

        ExamSchedule.LoadData(jsonData);

        $("#btnSave").on("click",function(){

            ExamSchedule.FormSubmit(jsonData);

        })

        // Bind Subject

        $("#AcademicTermKey,#CourseKey,#UniversityMasterKey,#CourseYear").on("change",function() {
            var obj = {};
            obj.AcademicTermKey = $("#AcademicTermKey").val();
            obj.CourseKey = $("#CourseKey").val();
            obj.UniversityMasterKey = $("#UniversityMasterKey").val();
            obj.CourseYear = $("#CourseYear").val();
            ExamSchedule.GetclassDetails(obj,$("#SubjectKey"));
            //AppCommon.BindDropDownbyId(obj, $("#hdnFillSubjects").val(), $("#SubjectKey"), Resources.Subject);
        });

        //Bind Course

        $("#CourseTypeKey").on("change", function () {
            var obj={};
            obj.key=$(this).val()!=""?$(this).val():0;
            AppCommon.BindDropDownbyId(obj, $("#hdnFillCourse").val(), $("#CourseKey"), Resources.Course);
        });

        //Bind University and Year

        $("#AcademicTermKey,#CourseKey").on("change", function () {

            var obj={};
            obj.key=$("#CourseKey").val()!=""?$("#CourseKey").val():0;
            obj.AcademicTermKey=$("#AcademicTermKey").val()!=""?$("#AcademicTermKey").val():0;
            AppCommon.BindDropDownbyId(obj, $("#hdnFillUniversity").val(), $("#UniversityMasterKey"), Resources.AffiliationsTieUps);
            AppCommon.BindDropDownbyId(obj, $("#hdnFillCourseYear").val(), $("#CourseYear"), Resources.Year);
        });

        //Bind Batch


        $("#CourseKey,#BranchKey,#UniversityMasterKey").on("change", function () {

            var obj={};
            obj.Branchkey=$("#BranchKey").val()!=""?$("#BranchKey").val():0;
            obj.CourseKey=$("#CourseKey").val()!=""?$("#CourseKey").val():0;
            obj.UniversityMasterKey=$("#UniversityMasterKey").val()!=""?$("#UniversityMasterKey").val():0;
            AppCommon.BindDropDownbyId(obj, $("#hdnFillBatch").val(), $("#BatchKey"), Resources.Batch);
            //ExamSchedule.GetBatchByClass(obj,$("#BatchKey"));
        });

        $("#Branchkey,#CourseKey,#BatchKey,#ExamTermKey,#CourseYear,#SubjectKey").on("change", function () {
            ExamSchedule.LoadData(jsonData);
        });

    });

</script>
