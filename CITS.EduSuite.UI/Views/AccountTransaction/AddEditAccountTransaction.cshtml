@model CITS.EduSuite.Business.Models.ViewModels.AccountTransactionViewModel
@using CITS.EduSuite.Business.Models.ViewModels



<div class="modal-header">
    <i data-dismiss="modal" class="fa fa-remove close"></i>

    <h4 class="modal-title" id="myModalLabel">
        @EduSuiteUIResources.Add @EduSuiteUIResources.Sla @EduSuiteUIResources.Edit @EduSuiteUIResources.FutureTransactions
    </h4>

</div>
@using (Html.BeginForm("AddEditAccountTransaction", "AccountTransaction", FormMethod.Post, new { @id = "frmAccountTransaction" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RowKey)
    @Html.HiddenFor(m => m.TransactionTypeKey)
    @Html.ValidationSummary(true)

    <input type="hidden" id="hdnGetPartyByPartyType" value="@Url.Action("GetPartyByPartyType", "AccountTransaction")" />
    <input type="hidden" id="hdnGetAccountBalanceByAccount" value="@Url.Action("GetAccountBalanceByAccount", "AccountTransaction")" />
    <input type="hidden" id="hdnGetTransactionTypeByLedger" value="@Url.Action("GetTransactionTypeByLedger", "AccountTransaction")" />

    <div class="modal-body bottomLine">
        <div class="topMarginSpace  form-master fnone">
            <div class="row">
                <div class="paddingNone">
                    <span class="ValidateDataMsg"> @Html.ValidationMessage("error_msg")  </span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 mandatoryHead ">
                    <span>@EduSuiteUIResources.FieldsMarkedAs<span class="mandatoryStar"> * </span>@EduSuiteUIResources.AreMandatory</span>

                </div>
            </div>
            <div class="row bottomLine">

                <div class="col-sm-4 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.Branch, htmlAttributes: new { @id = "lblBranch", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>

                        @Html.DropDownListFor(m => m.BranchKey, new SelectList(Model.Branches, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Branch, new { @class = "input-control form-control form-control-sm form-control-sm", @InputFor = "lblBranch" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.BranchKey)
                        </span>
                    </div>
                </div>
                <div class="col-sm-4 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.Date, htmlAttributes: new { @id = "lblDate", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>

                        @Html.TextBoxFor(m => m.TransactionDate, "{0:dd/MM/yyyy}", new { @class = "form-control border-radius", @data_input_type = "date", @data_inputmask = "'alias': 'dd/mm/yyyy'", @InputFor = "lblDate" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.TransactionDate)
                        </span>
                    </div>
                </div>

                <div class="col-sm-4 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.Ledger, htmlAttributes: new { @id = "lblPartyType", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>

                        @Html.DropDownListFor(m => m.AccountLedgerKey, new SelectList(Model.AccountLedgers, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Ledger, new { @class = "dropdownStyle form-control", @InputFor = "lblPartyType" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.AccountLedgerKey)
                        </span>
                    </div>
                </div>
            </div>
            <div class="row bottomLine">
                <div class="col-sm-4 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.PartyType, htmlAttributes: new { @id = "lblPartyType", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>

                        @Html.DropDownListFor(m => m.PartyTypeKey, new SelectList(Model.PartyTypes, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.PartyType, new { @class = "dropdownStyle form-control", @InputFor = "lblPartyType" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.PartyTypeKey)
                        </span>
                    </div>
                </div>
                <div class="col-sm-4 form-col">
                    <div class="form-group">

                        @Html.Label(EduSuiteUIResources.Party, htmlAttributes: new { @id = "lblParty", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>

                        @Html.DropDownListFor(m => m.PartyKey, new SelectList(Model.Parties, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Party, new { @class = "dropdownStyle form-control", @id = "ddlParty", @InputFor = "lblParty" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.PartyKey)
                        </span>
                    </div>
                </div>
                <div class="col-sm-4 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.Amount, htmlAttributes: new { @id = "lblAmount", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control border-radius", @InputFor = "lblAmount" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.Amount)
                        </span>
                    </div>
                </div>

            </div>
            <div class="row bottomLine">
                <div class="col-sm-4 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.TransactionDueDate, htmlAttributes: new { @id = "lblTransactionDueDate", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>

                        @Html.TextBoxFor(m => m.TransactionDueDate, "{0:dd/MM/yyyy}", new { @class = "form-control border-radius", @data_input_type = "date", @data_inputmask = "'alias': 'dd/mm/yyyy'", @InputFor = "lblTransactionDueDate" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.TransactionDueDate)
                        </span>
                    </div>
                </div>
                <div class="col-sm-4 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.DueFineAmount, htmlAttributes: new { @id = "lblAmount", @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.DueFineAmount, new { @class = "form-control border-radius", @InputFor = "lblAmount" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.Amount)
                        </span>
                    </div>
                </div>

            </div>
            <div class="row">

                <div class="col-sm-6 form-col">
                    <div class="form-group">
                        @Html.Label(EduSuiteUIResources.Remarks, htmlAttributes: new { @id = "lblRemarks", @class = "form-label" })


                        @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control border-radius", @InputFor = "lblRemarks" })
                         <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.Remarks)
                        </span>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <div class="modal-footer">
        <div class="col-sm-12">
            <div class="form-group">
                <input type="submit" value="@EduSuiteUIResources.Save" id="btnSave" class="btnForm btnSubmit btn btn-sm btn-default pull-left " />
                @if (Model.RowKey != 0 && Model.TransactionStatusKey == DbConstants.ProcessStatus.Approved)
                {
                    <input type="button" value="@EduSuiteUIResources.Payment" data-payment-modal="" data-href="@Url.Action("AddEditAccountTransactionPayment", "AccountTransaction", new { id = Model.RowKey })" id="btnPaymentWindow" class="btnForm btn btn-sm btn-warning pull-left" />
                }
                <button type="button" data-dismiss="modal" class="btnForm btnCancel btn btn-sm btn-default pull-left">@EduSuiteUIResources.Cancel</button>

            </div>

        </div>
    </div>

    <script>
        $(document).ready(function () {
            AppCommon.AutoHideDropdown();
            AppCommon.FormatDateInput();
            AppCommon.PaymentPopupWindow($("#btnPaymentWindow"), $("#hdnAddEditAccountTransactionPayment").val(), "@EduSuiteUIResources.Add @EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Transactions@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Payment");
            $("#PartyTypeKey,#BranchKey").change(function () {
                AccountTransaction.GetPartyById($("#PartyTypeKey").val(), $("#BranchKey").val());
            })
            $("#AccountLedgerKey").change(function () {
                AccountTransaction.GetTransactionTypeById($(this).val());
            })
            $("#btnPaymentWindow").on("click", function () {
                AccountTransaction.PaymentPopupWindow($("#RowKey").val());
            })

        });

    </script>
}







