@model CITS.EduSuite.Business.Models.ViewModels.AuthorViewModel


<div class="modal-header">
    <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close"><i class="fa fa-close"></i></button>
    <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.Add @EduSuiteUIResources.Sla @EduSuiteUIResources.Edit@EduSuiteUIResources.BlankSpace @EduSuiteUIResources.Author</h4>
</div>

@using (Html.BeginForm("AddEditAuthor", "Author", FormMethod.Post, new { @id = "frmAuthor" }))
{
    <div class="modal-body">
        <div class="form-master">
            <div class="form-row">
                <div class="paddingNone">
                    <span class="text-danger"><strong> @Html.ValidationMessage("error_msg")</strong>  </span>
                </div>
            </div>
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.RowKey)
            @Html.ValidationSummary(true)
            <div class="form-row">
                <div class="col-lg-4  col-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.Author + @EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Name, htmlAttributes: new { @id = "lblAuthorName", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.AuthorName, new { @class = "form-control input-control", @InputFor = "lblAuthorName" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.AuthorName)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-4  col-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.NickName, htmlAttributes: new { @id = "lblAuthorNickName", @class = "form-label" })
                        @Html.TextBoxFor(m => m.AuthorNickName, new { @class = "form-control input-control", @InputFor = "lblAuthorNickName" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.AuthorNickName)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-4  col-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.Phone, htmlAttributes: new { @id = "lblAuthorPhone", @class = "form-label" })
                        @Html.TextBoxFor(m => m.AuthorPhone, new { @class = "form-control input-control", @InputFor = "lblAuthorPhone" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.AuthorPhone)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-6 col-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.Address, htmlAttributes: new { @id = "lblAuthorAddress", @class = "form-label" })
                        @Html.TextAreaFor(m => m.AuthorAddress, new { @class = "form-control input-control", @InputFor = "lblAuthorAddress" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.AuthorAddress)
                        </span>
                    </fieldset>
                </div>


                <div class="col-lg-4  col-6">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.IsActive, new { @class = "form-label" })

                        <div class="switch-check my-2">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "switch-input" })
                            <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                            <div class="switch-handle"></div>
                        </div>
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.IsActive)
                        </span>
                    </fieldset>

                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer justify-content-start">
        <fieldset class="form-group">
            <input type="submit" value="@EduSuiteUIResources.Submit" id="btnSave" class="btn btn-sm btn-success mx-1" />
            <button type="button" data-dismiss="modal" class="btn btn-sm btn-danger mx-1">@EduSuiteUIResources.Cancel</button>

        </fieldset>
    </div>

}
 



