                                    $("#grid").jqGrid("setGridParam", { datatype: 'json' }).trigger("reloadGrid");
                                }
                            }
                        }, URL);
                    }
                    else {
                        URL = URL + "?keys=" + ids;
                        $.customPopupform.CustomPopup({
                            modalsize: "modal-lg",
                            load: function () {
                                setTimeout(function ()
                                {
                                    ScholarshipExamResultPopupLoad();
                                },500)
                            },
                            rebind: function (result) {
                                if (typeof result == "string") {
                                    $("[data-valmsg-for=error_msg]").html(response);
                                }
                                else if (result.IsSuccessful) {
                                    toastr.success(Resources.Success, result.Message);
                                    $("#frmAddEditScholarshipExamResult").closest(".modal").modal("hide")
                                    $("#grid").jqGrid("setGridParam", { datatype: 'json' }).trigger("reloadGrid");
                                }
                            }
                        }, URL);
                    }
                }
                //if (selRowIds && selRowIds.length > 0)
                //{
                //    URL = URL + "?keys=" + selRowIds;
                //    var model=selRowIds;
                //    var result = EduSuite.Confirm2({
                //        title: Resources.Confirmation,
                //        content:" Are you sure you want to Move this "+ selRowIds.length+" Scholarship details to Enquiry?",
                //        actionUrl: $("#hdnMoveToEnquiry").val(),
                //        parameters: model,
                //        dataRefresh: function () { $("#grid").jqGrid('setGridParam', { datatype: 'json' }).trigger('reloadGrid'); }
                //    });

                //}

            }
        })

    });



</script>
