@model CITS.EduSuite.Business.Models.ViewModels.StudentsPromotionViewModel

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/JqueryRepeater")
    @Scripts.Render("~/Scripts/Common")
    @Scripts.Render("~/bundles/CitsValidation")
    @Scripts.Render("~/Scripts/StudentsPromotion")
    @Scripts.Render("~/Content/DatePickerJS")
}
<input type="hidden" id="hdnFillClassDetails" value="@Url.Action("FillClassDetails", "StudentsPromotion")" />
<input type="hidden" id="hdnFillCourseType" value="@Url.Action("FillCourseType", "StudentsPromotion")" />
<input type="hidden" id="hdnDeleteStudentsPromotion" value="@Url.Action("DeleteStudentsPromotion", "StudentsPromotion")" />
<input type="hidden" id="hdnStudentPromotionList" value="@Url.Action("StudentsPromotionList", "StudentsPromotion")" />
<input type="hidden" id="hdnFillBatch" value="@Url.Action("FillBatch", "StudentsPromotion")" />
<input type="hidden" id="hdnUrl" value="@Url.Action("GetStudentsPromotion", "StudentsPromotion", new { id = "" })" />
<input type="hidden" id="hdnGenerateRollnumber" value="@Url.Action("GenerateRollnumber", "StudentsPromotion")" />
<input type="hidden" id="hdnResetPromotion" value="@Url.Action("ResetPromotion", "StudentsPromotion")" />

<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.Add@EduSuiteUIResources.Hyphen@EduSuiteUIResources.Edit@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.StudentsPromotion</h3>
                        <ol class="breadcrumb breadcrumb-simple mb-2 float-sm-right">
                            <li><a href="#" onclick="location.href='@Url.Action("StudentsPromotionList", "StudentsPromotion")' ">@EduSuiteUIResources.StudentsPromotion</a></li>
                            <li class="active">@EduSuiteUIResources.Add@EduSuiteUIResources.Hyphen@EduSuiteUIResources.Edit@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.StudentsPromotion</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section class="section-content mx-sm-3 mx-0">
    <div class="form-master">
        @using (Html.BeginForm("AddEditStudentsPromotionSubmit", "StudentsPromotion", FormMethod.Post, new { @id = "frmStudentsPromotion" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.IsUpdate)
            @Html.HiddenFor(m => m.RowKey)


            <div class="form-row">
                @if (Model.Branches.Count == 1)
                {
                    {
                        Model.BranchKey = (Model.BranchKey == 0 || Model.BranchKey == null) ? (short)Model.Branches.Select(x => x.RowKey).FirstOrDefault() : Model.BranchKey;
                    }
                    @Html.HiddenFor(m => m.BranchKey)
                }
                else
                {
                    <div class="col-lg-2 col-sm-4 col-6">
                        <fieldset class="form-group ">
                            @Html.Label(EduSuiteUIResources.Branch, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                            @Html.DropDownListFor(m => m.BranchKey, new SelectList(Model.Branches, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Branch, new { @class = "form-control input-control", @data_live_search = "true" })<span class="form-control-error-text">

                                @Html.ValidationMessageFor(m => m.BranchKey)
                            </span>
                        </fieldset>

                    </div>
                }
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(EduSuiteUIResources.CourseType, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.CourseTypeKey, new SelectList(Model.CourseTypes, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.CourseType, new { @class = "form-control border-radius input-control autoselect-select" })<span class="form-control-error-text">

                            @Html.ValidationMessageFor(m => m.CourseTypeKey)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(EduSuiteUIResources.ClassCode, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.ClassDetailsKey, new SelectList(Model.ClassDetails, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.ClassCode, new { @class = "form-control input-control", @data_live_search = "true" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.ClassDetailsKey)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-2 col-sm-4 col-6">
                    <fieldset class="form-group ">
                        @Html.Label(EduSuiteUIResources.Batch, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.DropDownListFor(m => m.BatchKey, new SelectList(Model.Batches, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Batch, new { @class = "form-control input-control", @data_live_search = "true" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.BatchKey)
                        </span>
                    </fieldset>
                </div>

            </div>


            <div id="dvStudentsList"></div>
            <div class="row mt-2">
                <div class="form-group">
                    <div class="col-12">
                        <fieldset class="form-group">
                            <input type="button" value="@EduSuiteUIResources.Save" id="btnSave" class="btn btn-sm btn-success mx-1" />
                            <input type="button" value="@EduSuiteUIResources.Cancel" onclick="location.href='@Url.Action("StudentsPromotionList", "StudentsPromotion")' " class="btn btn-sm btn-danger mx-1" />
                        </fieldset>
                        <div class="col-12 paddingNone">
                            <span class="text-danger"><strong> @Html.ValidationMessage("error_msg")</strong>  </span>
                        </div>
                    </div>


                </div>

            </div>
        }
    </div>
</section>
<script>
    var jsonData=@(Html.Raw(Json.Encode(Model)));

    $(document).ready(function () {
        AppCommon.FormatInputCase();
        AppCommon.FormatDateInput();
        AppCommon.CustomRemoteMethod();
        StudentsPromotion.LoadData(jsonData);
        $("#btnSave").on("click",function(){

            StudentsPromotion.FormSubmit(jsonData);
        })

        // Bind Course Type

        $("#BranchKey").on("change", function () {
            var obj={};
            obj.Branchkey=$(this).val()!=""?$(this).val():0;
            AppCommon.BindDropDownbyId(obj, $("#hdnFillCourseType").val(), $("#CourseTypeKey"), Resources.CourseType);
        });
        // Bind Class Details

        $("#CourseTypeKey").on("change", function () {
            var obj={};
            obj.key=$(this).val()!=""?$(this).val():0;
            obj.Branchkey=$("#BranchKey").val()!=""?$("#BranchKey").val():0;
            AppCommon.BindDropDownbyId(obj, $("#hdnFillClassDetails").val(), $("#ClassDetailsKey"), Resources.ClassCode);
        });



        //Bind Batch

        $("#ClassDetailsKey").on("change", function () {
            var obj={};
            obj.Branchkey=$("#BranchKey").val()!=""?$("#BranchKey").val():0;
            obj.ClassDetailsKey=$("#ClassDetailsKey").val()!=""?$("#ClassDetailsKey").val():0;
            //obj.UniversityMasterKey=$("#UniversityMasterKey").val()!=""?$("#UniversityMasterKey").val():0;
            AppCommon.BindDropDownbyId(obj, $("#hdnFillBatch").val(), $("#BatchKey"), Resources.Batch);
        });


        $("#Branchkey,#ClassDetailsKey,#BatchKey").on("change", function () {
            StudentsPromotion.LoadData(jsonData);
        });

    });

</script>

