                        //    {

                        //    },
                        //    rebind: function (result)
                        //    {
                        //        Application.GetApplication();
                        //    }
                        //}, URL);
                    }
                    else
                    {
                        //URL = URL + "?keys=" + ids;
                        //$.customPopupform.CustomPopup({
                        //    modalsize: "modal-lg",
                        //    load: function ()
                        //    {

                        //    },
                        //    rebind: function (result)
                        //    {
                        //        Application.GetApplication();
                        //    }
                        //}, URL);

                        //alert("Please Select Atleast one")
                        EduSuite.AlertMessage({ title: Resources.Warning, content: "Please Select Atleast one", type: 'orange' })
                    }

                }}
        })



    });

    function HideButtons(){
        var scheduleStatus = $("#tab-componets li a.active").data('val');
        scheduleStatus = scheduleStatus ? JSON.parse(scheduleStatus) : false;
        if(scheduleStatus){
            $("#lnkExamSchedule").hide();
        }
        else
        {
            $("#lnkExamSchedule").show();
        }

    }



</script>
