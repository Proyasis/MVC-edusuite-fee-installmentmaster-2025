<script>
    var jsonData=@(Html.Raw(Json.Encode(Model)));
    $(document).ready(function () {
        AppCommon.AutoHideDropdown();
        $("#ExamDate").val("");
        $("#tab-componets li:first-child a").addClass('active');


        HideButtons();

