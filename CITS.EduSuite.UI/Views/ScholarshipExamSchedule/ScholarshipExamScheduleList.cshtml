                            if (formData[i]) {
                                var name = formData[i]['name'];
                                var keyName = name.match(/\].*/) ? name.match(/\].*/)[0].replace("].", "") : name;

                                if (TimeKeys.indexOf(keyName) > -1) {
                                    formData[i]['value'] = (formData[i]['value'] != "" ? moment(formData[i]['value'].toUpperCase(), ["hh:mm A"]).format("HH:mm") : null);
                                }
                            }
                        })
                        formData.ScholarshipKeyList=selRowIds;
                        //var model=selRowIds;

                        var result = EduSuite.Confirm2({
                            title: Resources.Confirmation,
                            content:" Are you sure you want to Schedule this "+ selRowIds.length+" Scholarship details to Exam?",
                            actionUrl: $("#hdnAddEditScholarshipExamScheduleBulk").val(),
                            parameters: formData,
                            dataRefresh: function () { $("#grid").jqGrid('setGridParam', { datatype: 'json' }).trigger('reloadGrid'); }
                        });


                        //$.customPopupform.CustomPopup({
                        //    modalsize: "modal-lg",
