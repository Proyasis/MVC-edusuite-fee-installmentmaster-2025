        });
        $("#SearchBranchKey").on("change",function(){
            var obj = {};
            obj.id = $(this).val() != "" ? $(this).val() : 0;
            AppCommon.BindDropDownbyId(obj, $("#hdnGetSubBranchByBranch").val(), $("#SubBranchKey"),  Resources.SubCenter, "ExamSubCenters");

        });

        //AppCommon.EditGridPopup($("#addEditScholarship"), ScholarshipPopupLoad)



