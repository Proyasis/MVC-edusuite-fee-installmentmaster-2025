@model CITS.EduSuite.Business.Models.ViewModels.UniversityCourseViewModel

@using System.Web.Mvc
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/UniversityCourse")

    @Scripts.Render("~/Content/JqueryRepeater")
    @Scripts.Render("~/Scripts/Common")
    @Scripts.Render("~/bundles/CitsValidation")
}
<input type="hidden" id="hdnGetUniversityCourse" value="@Url.Action("GetUniversityCourse", "UniversityCourse")" />
<input type="hidden" id="hdnDeleteUniversityCourse" value="@Url.Action("DeleteUniversityCourse", "UniversityCourse")" />
<input type="hidden" id="hdnAddEditUniversityCourse" value="@Url.Action("AddEditUniversityCourse", "UniversityCourse")" />
<input type="hidden" id="hdnAddEditClassDetails" value="@Url.Action("AddEditClassDetails", "UniversityCourse")" />
<input type="hidden" id="hdnAddEditUniversityCourseAmount" value="@Url.Action("AddEditUniversityCourseAmount", "UniversityCourse")" />
<input type="hidden" id="hdnAddEditUniverstyCourseFeeInstallment" value="@Url.Action("AddEditUniverstyCourseFeeInstallment", "UniversityCourse")" />
<input type="hidden" id="hdnFillCoursesById" value="@Url.Action("FillCoursesById", "SelectList")" />




<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.AffiliationsTieUps@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Course</h3>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 text-right">
            <a id="addEditUniversityCourse" data-href="@Url.Action("AddEditUniversityCourse", "UniversityCourse")" class="btn btn-success btn-sm "><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New @EduSuiteUIResources.BlankSpace @EduSuiteUIResources.AffiliationsTieUps@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Course</span></a>
        </div>
    </div>
</header>
<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar form-row">
            <div class="col-lg-2 col-sm-4 col-6">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.SearchAcademicTermKey, new SelectList(Model.AcademicTerms, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.AcademicTerm, new { @class = "form-control input-control autohide-select", @data_plugin_type = "select2", @data_live_search = "true" })
                </div>
            </div>
            <div class="col-lg-2 col-sm-4 col-6">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.SearchCourseTypeKey, new SelectList(Model.CourseTypes, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.CourseType, new { @class = "form-control input-control autohide-select", @data_plugin_type = "select2", @data_live_search = "true" })
                </div>
            </div>
            <div class="col-lg-2 col-sm-4 col-6">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.SearchCourseKey, new SelectList(Model.Courses, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Course, new { @class = "form-control input-control autohide-select", @data_plugin_type = "select2", @data_live_search = "true" })
                </div>
            </div>
            <div class="col-lg-2 col-sm-4 col-6">
                <div class="form-group">
                    @Html.DropDownListFor(m => m.SearchUniversityMasterKey, new SelectList(Model.Universities, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.University, new { @class = "form-control input-control autohide-select", @data_plugin_type = "select2", @data_live_search = "true" })
                </div>
            </div>
            <div class="col-lg-2 col-sm-4 col-6 d-none">
                <input id="txtsearch" type="text" name="focus" class="form-control gridSearchTextBox" placeholder="@EduSuiteUIResources.Search@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.AffiliationsTieUps @EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Course" /> @* Change Search TextBox Placeholder*@
                <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
            </div>

            <div class="col-lg-2 col-sm-4 col-6 d-none">
                <a class="btn btn-info btn-sm float-right " onclick='window.location.reload()'>
                    <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                </a>
            </div>

        </div>

        <div class="table-wrapper">
            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid"></table>
                <div id="pager"></div>
            </div>
        </div>

    </div>
</section>
<script>
    $(document).ready(function () {
        UniversityCourse.GetUniversityCourse();
        $("#txtsearch").on("input", function () {
            UniversityCourse.GetUniversityCourse();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            UniversityCourse.GetUniversityCourse();
        });

        AppCommon.EditGridPopup($("#addEditUniversityCourse"), UniversityCoursePopupLoad)

        $("#SearchAcademicTermKey").change(function () {
            UniversityCourse.GetUniversityCourse();
        });
        $("#SearchCourseTypeKey").change(function () {
            UniversityCourse.GetUniversityCourse();
        });
        $("#SearchCourseKey").change(function () {
            UniversityCourse.GetUniversityCourse();
        });
        $("#SearchUniversityMasterKey").change(function () {
            UniversityCourse.GetUniversityCourse();
        });

        $("#SearchCourseTypeKey").change(function () {
            debugger
            var obj = {};
           
            obj.CourseTypeKey = $(this).val();
            AppCommon.BindDropDownbyId(obj, $("#hdnFillCoursesById").val(), $("#SearchCourseKey"), Resources.Course);
            UniversityCourse.GetUniversityCourse();
        });
    });
</script>

