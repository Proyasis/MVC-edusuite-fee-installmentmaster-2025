@model List<CITS.EduSuite.Business.Models.ViewModels.StudentStudyMaterialViewModel>
@using CITS.EduSuite.Business.Models
@using CITS.EduSuite.Business.Models.ViewModels



<div class="modal-header">
    <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close"><i class="fa fa-close"></i></button>
    <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.StudyMaterial</h4>
</div>


<div class="modal-body bottomLine">
    <input type="hidden" id="hdnDocumentTrackList" value="@Url.Action("DocumentTrackList", "Shared")" />

    <ul id="StudyMaterialCategories" class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item StudyMaterialsList">
                <div class="row">
                    <div class="col-12 col-sm-12 col-lg-12">
                        <span class="font-weight-bold"> @EduSuiteUIResources.StudyMaterialTitle  : @item.StudyMaterialTitle</span>
                    </div>
                    <div class="col-12 col-sm-12 col-lg-12 StudyMaterialDescription">
                        <span class="font-weight-bold"> @EduSuiteUIResources.StudyMaterialDescriptions  : @item.StudyMaterialDecription </span>
                    </div>
                   
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>@EduSuiteUIResources.SlNo</th>
                                <th>@EduSuiteUIResources.Content</th>
                                <th>@EduSuiteUIResources.IsAllowDownload</th>
                                <th>@EduSuiteUIResources.IsAllowPreview</th>
                                <th>@EduSuiteUIResources.View@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Count</th>
                                <th>@EduSuiteUIResources.Download@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < item.StudentStudyMaterialDetailsList.Count; i++)
                            {

                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        @item.StudentStudyMaterialDetailsList[i].StudyMaterialName
                                    </td>
                                    <td>
                                        @item.StudentStudyMaterialDetailsList[i].IsAllowDownload
                                    </td>
                                    <td>
                                        @item.StudentStudyMaterialDetailsList[i].IsAllowPreview
                                    </td>
                                    <td>
                                        @item.StudentStudyMaterialDetailsList[i].StudyMaterialViewCount
                                        <a  onclick="Shared.GetDocumentTrackPopup('@DbConstants.DocumentType.PDF','@item.StudentStudyMaterialDetailsList[i].RowKey')" >
                                            <label class="badge badge-success mt-1">
                                                <i style="color:white" class="fa fa-eye"></i> Click here to View Count
                                            </label>
                                        </a>
                                    </td>
                                    <td>
                                        @item.StudentStudyMaterialDetailsList[i].StudyMaterialDownloadCount
                                        <a onclick="Shared.GetDocumentTrackPopup('@DbConstants.DocumentType.PDF','@item.StudentStudyMaterialDetailsList[i].RowKey')" >
                                            <label class="badge badge-success mt-1">
                                                <i style="color:white" class="fa fa-eye"></i> Click here to Download Count
                                            </label>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                   
                </div>
            </li>


        }
    </ul>

</div>




<style>
    .modal-dialog.modal-dialog-zoom.modal-lg80 {
        max-width: 95%;
        width: 95%;
    }
</style>
