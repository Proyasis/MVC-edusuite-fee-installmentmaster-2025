@model CITS.EduSuite.Business.Models.ViewModels.LibraryReportViewModel
@using CITS.EduSuite.Business.Models.ViewModels

@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/LibraryReport")
    @Scripts.Render("~/Content/DatePickerJS")

    @Scripts.Render("~/Content/ExcelExportJS")
    @Scripts.Render("~/Content/momentJS")
}




<input type="hidden" id="hdnGetMemberPlanSummary" value="@Url.Action("GetMemberPlanSummary", "LibraryReport")" />
<input type="hidden" id="hdnGetBookCopies" value="@Url.Action("GetBookCopies", "LibraryReport")" />
<input type="hidden" id="hdnMemberDetails" value="@Url.Action("MemberDetails", "LibraryReport")" />

<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.MemberPlanDetails@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Summary</h3>

                    </div>
                </div>
            </div>
        </div>

    </div>
</header>
<section class="section-content mx-sm-3 mx-0">

    <div class="GridBody">
        <div class="grid-nav-bar">
            <form>

                <div class="form-row">
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.DropDownListFor(m => m.ApplicationTypeKey, new SelectList(Model.ApplicationTypes, "RowKey", "Text"), EduSuiteUIResources.ApplicationType, new { @class = "form-control input-control  selectpicker"})
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.BranchKeys, new SelectList(Model.Branches, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Branch })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.MemberTypeKeys, new SelectList(Model.MemberTypes, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.MemberType })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.BorrowerTypeKeys, new SelectList(Model.BorrowerTypes, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.BorrowerType })
                        </fieldset>
                    </div>
                   
                    <div class="col-lg-2 col-sm-3 col-4 DivStudent">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.CourseKeys, new SelectList(Model.Courses, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Course })
                        </fieldset>
                    </div>

                    <div class="col-lg-2 col-sm-3 col-4 DivStudent">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.UniversityKeys, new SelectList(Model.Universities, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.AffiliationsTieUps })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4 DivStudent">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.BatchKeys, new SelectList(Model.Batches, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Batch })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4 DivStudent">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.ClassDetailsKeys, new SelectList(Model.ClassDetails, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.ClassCode })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedFrom, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.FromDate + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedTo, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.ToDate + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.SearchAnyText, new { @class = "form-control input-control", @placeholder = "" + EduSuiteUIResources.Name + EduSuiteUIResources.Coma + EduSuiteUIResources.AdmissionNo + EduSuiteUIResources.Coma + EduSuiteUIResources.Mobile + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-2 ">
                        <fieldset class="form-group">
                            <button type="button" id="btnSearch" class="btnForm btnSubmit btn btn-sm btn-success">@EduSuiteUIResources.Search</button>
                        </fieldset>
                    </div>
                </div>

            </form>
            <div class="form-row justify-content-between">

                <div class="col-lg-2 col-sm-3 col-4">
                    <fieldset class="form-group">
                        @Html.ListBox("ShowHideColumns", new SelectList(Model.Columns, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @onchange = "LibraryReport.GetCustomizedColumns(this)", @data_title = "Columns" })
                    </fieldset>

                </div>
                <div class="col-lg-2 col-sm-3 col-4">
                    <div class="button-group float-right">
                        <button id="btnPrint" type="button" onclick="LibraryReport.GetExportPrintData('P','#hdnGetMemberPlanSummary','MemberPlanSummary','Member Plan Summary')" class="btn btn-primary btn-sm"><i class="fa fa-print btn-blue" aria-hidden="true"></i></button>
                        <button id="btnExport" type="button" onclick="LibraryReport.GetExportPrintData('E','#hdnGetMemberPlanSummary','MemberPlanSummary','Member Plan Summary')" class="btn btn-success btn-sm"><i class="fa fa-file-excel-o fa-align-right" aria-hidden="true"></i></button>

                    </div>
                </div>
            </div>
        </div>

        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid" class="table table-striped"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
    var jsonDataList=@(Html.Raw(Json.Encode(Model)));
    jsonDataList["DefaultColumns"] = ["MemberName", "CardId", "ApplicationTypeName", "MemberTypeName", "BorrowerTypeName","Descreption", "NumberOfBooksAllowed", "TotalIssued", "BalanceReturn"]
    $(document).ready(function ()
    {
        $(".DivStudent").hide();

        AppCommon.FormatDateInput();
        AppCommon.FormatSelect2();

        LibraryReport.GetMemberPlanSummary(jsonDataList);

        $('#btnSearch').on("click", function ()
        {
            LibraryReport.GetMemberPlanSummary(jsonDataList);
        });

        $('#SearchAnyText').on("input", function ()
        {
            LibraryReport.GetMemberPlanSummary(jsonDataList);
        });
        $("#ApplicationTypeKey").on("change", function () {
            var ApplicationTypeKey = $(this).val();

            if (ApplicationTypeKey == Resources.ApplicationTypeStudent) {
                $(".DivStudent").show();
            }
            else {
                $(".DivStudent").hide();
            }
            LibraryReport.GetMemberPlanSummary(jsonDataList);
        });

    });
</script>



