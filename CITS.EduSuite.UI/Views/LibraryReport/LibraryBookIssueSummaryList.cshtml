@model CITS.EduSuite.Business.Models.ViewModels.LibraryReportViewModel
@using CITS.EduSuite.Business.Models.ViewModels

@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/LibraryReport")
    @Scripts.Render("~/Content/DatePickerJS")

    @Scripts.Render("~/Content/ExcelExportJS")
    @Scripts.Render("~/Content/momentJS")
}




<input type="hidden" id="hdnGetBookIssueSummary" value="@Url.Action("GetBookIssueSummary", "LibraryReport")" />

<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.BookIssue@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Summary</h3>

                    </div>
                </div>
            </div>
        </div>

    </div>
</header>
<section class="section-content mx-sm-3 mx-0">

    <div class="GridBody">
        <div class="grid-nav-bar">
            <form>
              

                <fieldset class="scheduler-border collapse DivStudent">
                    <legend class="scheduler-border">Student</legend>
                    <div class="form-row">
                        <div class="col-lg-2 col-sm-3 col-4 DivStudent">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.CourseKeys, new SelectList(Model.Courses, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Course })
                            </fieldset>
                        </div>

                        <div class="col-lg-2 col-sm-3 col-4 DivStudent">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.UniversityKeys, new SelectList(Model.Universities, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.AffiliationsTieUps })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4 DivStudent">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.BatchKeys, new SelectList(Model.Batches, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Batch })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4 DivStudent">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.ClassDetailsKeys, new SelectList(Model.ClassDetails, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.ClassCode })
                            </fieldset>
                        </div>
                    </div>
                </fieldset>

                <fieldset class="scheduler-border collapse">
                    <legend class="scheduler-border">Book</legend>

                    <div class="form-row">
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.BookCategoryKeys, new SelectList(Model.BookCategories, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.BookCategory })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.AuthorKeys, new SelectList(Model.Authors, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Authors })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.BookIssueTypeKeys, new SelectList(Model.BookIssueTypes, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.BookIssueType })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.LanguageKeys, new SelectList(Model.Languages, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Language })
                            </fieldset>
                        </div>

                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.PublisherKeys, new SelectList(Model.Publishers, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Publisher })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.RackKeys, new SelectList(Model.Racks, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Wardrobe })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.SubRackKeys, new SelectList(Model.SubRacks, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.WardrobeRack })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.LibraryBookKeys, new SelectList(Model.LibraryBooks, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Book })
                            </fieldset>
                        </div>
                        <div class="col-lg-2 col-sm-3 col-4">
                            <fieldset class="form-group">
                                @Html.ListBoxFor(m => m.LibraryBookCopyKeys, new SelectList(Model.LibraryBookCopies, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.BookCopies })
                            </fieldset>
                        </div>
                    </div>

                </fieldset>
                
                <div class="form-row mt-2">
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.BranchKeys, new SelectList(Model.Branches, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.Branch })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.DropDownListFor(m => m.ApplicationTypeKey, new SelectList(Model.ApplicationTypes, "RowKey", "Text"), EduSuiteUIResources.ApplicationType, new { @class = "form-control input-control  selectpicker", @data_live_search = "true" })
                        </fieldset>
                    </div>

                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.MemberTypeKeys, new SelectList(Model.MemberTypes, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.MemberType })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.ListBoxFor(m => m.BorrowerTypeKeys, new SelectList(Model.BorrowerTypes, "RowKey", "Text"), new { @class = "form-control input-control  selectpicker", @multiple = "multiple", @data_live_search = "true", @data_title = EduSuiteUIResources.BorrowerType })
                        </fieldset>
                    </div>

                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedFrom, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.FromDate + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-3">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.DateAddedTo, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_input_type = "date", @InputFor = "lblEnquiryDateOfAdmission", @data_inputmask = "'alias': 'dd/mm/yyyy'", @placeholder = "" + @EduSuiteUIResources.ToDate + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-4">
                        <fieldset class="form-group">
                            @Html.TextBoxFor(m => m.SearchAnyText, new { @class = "form-control input-control", @placeholder = "" + EduSuiteUIResources.Name + EduSuiteUIResources.Coma + EduSuiteUIResources.AdmissionNo + EduSuiteUIResources.Coma + EduSuiteUIResources.Mobile + "" })
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-2 ">
                        <fieldset class="form-group">
                            <button type="button" id="btnSearch" class="btnForm btnSubmit btn btn-sm btn-success">@EduSuiteUIResources.Search</button>
                        </fieldset>
                    </div>
                    <div class="col-lg-2 col-sm-3 col-2 ">
                        <fieldset class="form-group">
                            <button type="button" id="btnfilter" class="btnForm btnSubmit btn btn-sm btn-info" data-toggle="collapse" href=".scheduler-border" aria-expanded="false">filter</button>
                        </fieldset>
                    </div>
                </div>
            </form>

            <div class="form-row justify-content-between">

                <div class="col-lg-2 col-sm-3 col-4">
                    <fieldset class="form-group">
                        @Html.ListBox("ShowHideColumns", new SelectList(Model.Columns, "RowKey", "Text"), new { @class = "form-control input-control selectpicker", @multiple = "multiple", @onchange = "LibraryReport.GetCustomizedColumns(this)", @data_title = "Columns" })
                    </fieldset>

                </div>

                <div class="col-lg-2 col-sm-3 col-4">
                    <div class="button-group float-right">
                        <button id="btnPrint" type="button" onclick="LibraryReport.GetExportPrintData('P','#hdnGetBookIssueSummary','LibraryBooKIssueSummary','Library Book Issue Summary')" class="btn btn-primary btn-sm"><i class="fa fa-print btn-blue" aria-hidden="true"></i></button>
                        <button id="btnExport" type="button" onclick="LibraryReport.GetExportPrintData('E','#hdnGetBookIssueSummary','LibraryBooKIssueSummary','Library Book Issue Summary')" class="btn btn-success btn-sm"><i class="fa fa-file-excel-o fa-align-right" aria-hidden="true"></i></button>

                    </div>
                </div>
            </div>
        </div>

        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid" class="table table-striped"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
    var jsonDataList=@(Html.Raw(Json.Encode(Model)));
    jsonDataList["DefaultColumns"] = ["BookCopySlNo", "BookName", "MemberName", "CardId","ApplicationTypeName", "IssuedDate", "DueDate", "ReturnDate", "BookStatusName"]
    $(document).ready(function ()
    {
        $(".DivStudent").hide();

        AppCommon.FormatDateInput();
        AppCommon.FormatSelect2();

        LibraryReport.GetBookIssueSummary(jsonDataList);

        $('#btnSearch').on("click", function ()
        {
            LibraryReport.GetBookIssueSummary(jsonDataList);
        });

        $('#SearchAnyText').on("input", function ()
        {
            LibraryReport.GetBookIssueSummary(jsonDataList);
        });
        $("#ApplicationTypeKey").on("change", function () {
            var ApplicationTypeKey = $(this).val();

            if (ApplicationTypeKey == Resources.ApplicationTypeStudent) {
                $(".DivStudent").show();
            }
            else {
                $(".DivStudent").hide();
            }
            //LibraryReport.GetMemberPlanSummary(jsonDataList);
        });

    });
</script>



