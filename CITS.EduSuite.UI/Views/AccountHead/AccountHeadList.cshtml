@model CITS.EduSuite.Business.Models.ViewModels.AccountHeadViewModel
@using System.Web.Mvc
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/DatePickerJS")
    @Scripts.Render("~/Scripts/AccountHead")
}
<input type="hidden" id="hdnGetAccountHead" value="@Url.Action("GetAccountHead", "AccountHead")" />
<input type="hidden" id="hdnDeleteAccountHead" value="@Url.Action("DeleteAccountHead", "AccountHead")" />
<input type="hidden" id="hdnAddEditAccountHead" value="@Url.Action("AddEditAccountHead", "AccountHead")" />
<input type="hidden" id="hdnViewLedger" value="@Url.Action("ViewLedger", "AccountFlow")" />
<input type="hidden" id="hdnFillSearchAccountHeadType" value="@Url.Action("FillSearchAccountHeadType", "AccountHead")" />

<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.AccountHead</h3>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 text-right">
            <a id="addEditAccountHead" data-href="@Url.Action("AddEditAccountHead", "AccountHead")" class="btn btn-success btn-sm "><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New @EduSuiteUIResources.BlankSpace @EduSuiteUIResources.AccountHead</span></a>
        </div>
    </div>
</header>

<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar ">
            <div class="form-row">
                <div class="col-lg-3 col-6">
                    <input id="txtsearch" type="text" name="focus" class="form-control gridSearchTextBox" placeholder="@EduSuiteUIResources.Search @EduSuiteUIResources.AccountHead" /> @* Change Search TextBox Placeholder*@
                    <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
                </div>
                <div class="col-6 col-lg-2">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.SearchAccountGroupKey, new SelectList(Model.AccountGroup, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Account + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Group, new { @class = "form-control input-control" })

                    </div>
                </div>
                <div class="col-6 col-lg-2">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.SearchAccountHeadTypeKey, new SelectList(Model.SearchAccountHeadType, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.AccountHeadType, new { @class = "form-control input-control", @InputFor = "lblAccountHeadType" })

                    </div>
                </div>
                <div class="col-6 col-lg-2">
                    <a class="btn btn-info btn-sm float-right " onclick='window.location.reload()'>
                        <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                    </a>
                </div>
                <div class="col-lg-2 col-sm-3 col-4">
                    <div class="button-group float-right">
                        <button id="btnPrint" type="button" onclick="GetExportPrintData('P','#hdnGetAccountHead','AccountHead','Account Head')" class="btn btn-primary btn-sm"><i class="fa fa-print btn-blue" aria-hidden="true"></i></button>
                        <button id="btnExport" type="button" onclick="GetExportPrintData('E','#hdnGetAccountHead','AccountHead','Account Head')" class="btn btn-success btn-sm"><i class="fa fa-file-excel-o fa-align-right" aria-hidden="true"></i></button>

                    </div>
                </div>
            </div>
        </div>

        <div class="table-wrapper">

            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid"></table>
                <div id="pager"></div>
            </div>
        </div>


    </div>
</section>


<script>
    $(document).ready(function () {
        $("#txtsearch").keydown(function () {
            AccountHead.GetAccountHead();
        });
        $("#txtsearch").keyup(function () {
            AccountHead.GetAccountHead();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            AccountHead.GetAccountHead();
        });

        $("#SearchAccountGroupKey").on("change", function () {
            var obj = {};
            obj.key = $(this).val();
            AppCommon.BindDropDownbyId(obj, $("#hdnFillSearchAccountHeadType").val(), $("#SearchAccountHeadTypeKey"), Resources.AccountHeadType)
            AccountHead.GetAccountHead();
        });

        $("#SearchAccountHeadTypeKey").on("change", function () {           
            AccountHead.GetAccountHead();
        });

        AccountHead.GetAccountHead();
        AppCommon.EditGridPopup($("#addEditAccountHead"), AccountHeadPopupLoad)

    });
</script>



