@model CITS.EduSuite.Business.Models.ViewModels.EmployeeShiftViewModel

@using System.Web.Mvc

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Content/DatePickerJS")
    @Scripts.Render("~/Content/momentJS")
    @Scripts.Render("~/Scripts/EmployeeShift")
    @Scripts.Render("~/Content/JqueryRepeater")
}
<input type="hidden" id="hdnGetEmployeeShifts" value="@Url.Action("GetEmployeeShifts", "EmployeeShift")" />
<input type="hidden" id="hdnDeleteEmployeeShift" value="@Url.Action("DeleteEmployeeShift", "EmployeeShift")" />
<input type="hidden" id="hdnAddEditEmployeeShift" value="@Url.Action("AddEditEmployeeShift", "EmployeeShift")" />


<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.Employee@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Shift</h3>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 text-right">
            <a id="addEditEmployeeShift" data-href="@Url.Action("AddEditEmployeeShift", "EmployeeShift")" onclick="EmployeeShift.EditPopup(this)" class="btn btn-success btn-sm"><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New @EduSuiteUIResources.BlankSpace @EduSuiteUIResources.Employee@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Shift</span></a>
        </div>
    </div>
</header>
<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar form-row justify-content-between">
            <div class="col-lg-3 col-6">

                <input id="txtsearch" type="text" name="focus" class="input-control form-control form-control-sm" placeholder="@EduSuiteUIResources.Search@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.Shift" /> @* Change Search TextBox Placeholder*@
                <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
            </div>

            <div class="col-6">
                <a class="btn btn-info btn-sm float-right" onclick='EmployeeShift.GetEmployeeShift()'>
                    <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                </a>
            </div>

        </div>

        <div class="table-wrapper">
            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {

        $("#txtsearch").keydown(function () {
            EmployeeShift.GetEmployeeShifts();
        });
        $("#txtsearch").keyup(function () {
            EmployeeShift.GetEmployeeShifts();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            EmployeeShift.GetEmployeeShifts();
        });
        EmployeeShift.GetEmployeeShifts();
      
    });
</script>
