@model CITS.EduSuite.Business.Models.ViewModels.LoginModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="page-center">
    <div class="page-center-in">
        <div class="container-fluid">
            @using (Html.BeginForm("Login", "Login", new { area = "" }, FormMethod.Post, new { @class = "sign-box" }))
            {
                <div class="sign-avatar">
                    @*<img src="~/Images/avatar-sign.png" alt="">*@
                    <img src="~/Images/edusuitelogo.png" alt="logo" style="border-radius:0px" />
                </div>
                <header class="sign-title">@EduSuiteUIResources.Login_Login</header>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.LoginUsername, new { @class = "form-control border-radius login-control", @placeholder = EduSuiteUIResources.UserName })
                    <span class="form-control-error-text"> @Html.ValidationMessageFor(m => m.LoginUsername)</span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.LoginPassword, new { @class = "form-control border-radius login-control", @placeholder = EduSuiteUIResources.Login_Password, @type = "password" })
                    <span class="form-control-error-text">  @Html.ValidationMessageFor(m => m.LoginPassword)</span>
                </div>
                <div class="form-group d-none">
                    <div class="checkbox float-left">
                        <input type="checkbox" id="signed-in" />
                        <label for="signed-in">Keep me signed in</label>
                    </div>
                    <div class="float-right reset">
                        <a href="reset-password.html">Reset Password</a>
                    </div>
                </div>
                <button type="submit" class="btn btn-dark btn-rounded">@EduSuiteUIResources.Login_Login</button>
                <p class="sign-note">@EduSuiteUIResources.ForgotPassword@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.QuostionMark@Html.ActionLink(EduSuiteUIResources.ForgotPassword, "ForgotPassword", "Login")</p>

                <span class="form-error-text"> @Html.ValidationMessage("error_msg")</span>
            }
        </div>
        @*@foreach (string customer in (List<string>)ViewBag.mac)
        {
            @customer
            <br />
        }*@

    </div>
</div>
