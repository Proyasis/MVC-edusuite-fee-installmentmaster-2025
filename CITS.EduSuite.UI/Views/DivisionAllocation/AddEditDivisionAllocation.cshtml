    function CheckByNoOfStudents(_this)
    {
        var CheckBoxes=$("input[type=checkbox][name*=IsActive]");
        var length=$(_this).val();
        length=parseInt(length)?parseInt(length):0;
        $(CheckBoxes).each(function(){
            if(!this.disabled)
            {
                this.checked=false;
                $(this).trigger("change")
            }
        })
        for(var i=0;i<length;i++)
        {
            if(!CheckBoxes[i].disabled)
            {
                CheckBoxes[i].checked=true;
                $(CheckBoxes[i]).trigger("change")
            }
        }
    }

    function checkNoOfStudents(_this)
    {

        if($("#DivisionKey").val()!= 0)
        {
            $("#divNoOfStudents").show();
        }
        else
        {
            $("#divNoOfStudents").hide();
        }
