@model CITS.EduSuite.Business.Models.ViewModels.DivisionAllocationViewModel
@using CITS.EduSuite.Business.Models.ViewModels

@using System.Web.Mvc
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/DivisionAllocation")
    @Scripts.Render("~/Content/DatePickerJS")
}
<input type="hidden" id="hdnGetDivisionAllocation" value="@Url.Action("GetDivisionAllocationdetails", "DivisionAllocation")" />
<input type="hidden" id="hdnDeleteDivisionAllocation" value="@Url.Action("DeleteDivisionAllocation", "DivisionAllocation")" />
<input type="hidden" id="hdnAddEditDivisionAllocation" value="@Url.Action("AddEditDivisionAllocation", "DivisionAllocation")" />
<input type="hidden" id="hdnFillBatch" value="@Url.Action("FillSearchBatch", "DivisionAllocation")" />

<div class="card-header">
    <header class="section-header">
        <div class="row justify-content-between px-1">
            <div class="col-sm-6 col-12">
                <div class="tbl">
                    <div class="tbl-row">
                        <div class="tbl-cell">
                            <h3>@EduSuiteUIResources.GenerateRollNo</h3>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 text-right">
                <a href="@Url.Action("AddEditDivisionAllocation", "DivisionAllocation")" class="btn btn-success btn-sm "><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New @EduSuiteUIResources.BlankSpace @EduSuiteUIResources.GenerateRollNo</span></a>
            </div>
        </div>
    </header>
</div>
<div class="card-body">
    <section class="section-content mx-sm-3 mx-0">
        <div class="GridBody">

            <div class="grid-nav-bar">
                <div class=" form-row ">
                    @if (Model.Branches.Count == 1)
                    {
                        {
                            Model.BranchKey = (Model.BranchKey == 0 || Model.BranchKey == null) ? (short)Model.Branches.Select(x => x.RowKey).FirstOrDefault() : Model.BranchKey;
                        }
                        @Html.HiddenFor(m => m.BranchKey)
                    }
                    else
                    {
                        <div class="col-lg-2 col-sm-4 col-6">
                            <fieldset class="form-group">
                                @Html.DropDownListFor(m => m.BranchKey, new SelectList(Model.Branches, "RowKey", "Text"), EduSuiteUIResources.Branch, new { @class = "form-control input-control ", @data_live_search = "true" })
                            </fieldset>
                        </div>
                    }
                    <div class="col-lg-2 col-sm-4 col-6">
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.BatchKey, new SelectList(Model.Batches, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Batch, new { @class = "form-control input-control autohide-select", @data_plugin_type = "select2", @InputFor = "lblBranch", @data_live_search = "true" })
                        </div>
                    </div>
                    <div class="col-lg-2 col-sm-4 col-6">
                        <input id="txtsearch" type="text" name="focus" class="form-control gridSearchTextBox" placeholder="@EduSuiteUIResources.Search" />

                        <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
                    </div>


                    <div class="col-lg-2 col-sm-4 col-6">
                        <a class="btn btn-info btn-sm float-right " onclick='window.location.reload()'>
                            <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                        </a>
                    </div>
                </div>
            </div>

            <div class="table-wrapper">

                <div class="jqGrid_wrapper overflow-auto">
                    <table id="grid"></table>
                    <div id="pager"></div>
                </div>
            </div>


        </div>
    </section>
</div>
    <script>
    $(document).ready(function () {

        AppCommon.FormatDateInput();
        $("#txtsearchDate").datepicker("setDate", new Date());

        $("#txtsearch").on("input", function () {
            DivisionAllocation.GetDivisionAllocation();
        });

        $("#BranchKey").change(function () {
            var obj = {};
            obj.BranchKey = $(this).val() != "" ? $(this).val() : 0;
            AppCommon.BindDropDownbyId(obj, $("#hdnFillBatch").val(), $("#BatchKey"), Resources.Batch);
            DivisionAllocation.GetDivisionAllocation();
        });
        $("#BatchKey").change(function () {
            DivisionAllocation.GetDivisionAllocation();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            DivisionAllocation.GetDivisionAllocation();
        });
        DivisionAllocation.GetDivisionAllocation();

        



    });
    </script>
