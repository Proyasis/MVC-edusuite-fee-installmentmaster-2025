
@using System.Web.Mvc
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/NotificationTemplate")
}
@{
    ViewBag.Title = EduSuiteUIResources.NotificationTemplate;
}
<input type="hidden" id="hdnGetNotificationTemplates" value="@Url.Action("GetNotificationTemplates", "NotificationTemplate")" />
<input type="hidden" id="hdnAddEditSMSNotification" value="@Url.Action("AddEditSMSNotification", "NotificationTemplate")" />
<input type="hidden" id="hdnAddEditEmailNotification" value="@Url.Action("AddEditEmailNotification", "NotificationTemplate")" />
<input type="hidden" id="hdnUpdateNotificationStatus" value="@Url.Action("UpdateNotificationStatus", "NotificationTemplate")" />


<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-sm-6 col-12">
            <div class="tbl">
                <div class="tbl-row">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.NotificationTemplate</h3>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 text-right">
            <a id="addEditNatureOfEnquiry" data-href="@Url.Action("AddEditNotificationTemplate", "NotificationTemplate")" class="btn btn-success btn-sm "><i class="fa fa-plus-square-o"></i> <span>@EduSuiteUIResources.New @EduSuiteUIResources.BlankSpace @EduSuiteUIResources.NotificationTemplate</span></a>
        </div>
    </div>
</header>
<section class="section-content mx-sm-3 mx-0">
    <div class="GridBody">

        <div class="grid-nav-bar form-row justify-content-between">
            <div class="col-lg-3 col-6">
                <input id="txtsearch" type="text" name="focus" class="form-control gridSearchTextBox" placeholder="@EduSuiteUIResources.Search @EduSuiteUIResources.NotificationTemplate" /> @* Change Search TextBox Placeholder*@
                <span id="iconSpan" class="iconSpan"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
            </div>

            <div class="col-6">
                <a class="btn btn-info btn-sm float-right" onclick='window.NotificationTemplate.reload()'>
                    <i class="fa fa-refresh"></i>   @EduSuiteUIResources.Refresh
                </a>
            </div>

        </div>

        <div class="table-wrapper">
            <div class="jqGrid_wrapper overflow-auto">
                <table id="grid"></table>
                <div id="pager"></div>
            </div>
        </div>
    </div>
</section>


<script>
    $(document).ready(function () {
        $("#txtsearch").on("input", function () {
            NotificationTemplate.GetNotificationTemplates();
        });

        $("#iconSpan").click(function () {
            $('#txtsearch').val('');
            NotificationTemplate.GetNotificationTemplates();
        });
        NotificationTemplate.GetNotificationTemplates();

    });
</script>

