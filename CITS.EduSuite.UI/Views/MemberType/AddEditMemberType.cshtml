@model CITS.EduSuite.Business.Models.ViewModels.MemberTypeViewModel


<div class="modal-header">
    <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close"><i class="fa fa-close"></i></button>
    <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.Add @EduSuiteUIResources.Sla @EduSuiteUIResources.Edit@EduSuiteUIResources.BlankSpace @EduSuiteUIResources.MemberType</h4>
</div>
@using (Html.BeginForm("AddEditMemberType", "MemberType", FormMethod.Post, new { @id = "frmMemberType" }))
{
    <div class="modal-body">
        <div class="form-master">


            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.RowKey)
            @Html.ValidationSummary(true)
            <div class="form-row">
                <div class="col-lg-4 col-sm-6 col-12">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.MemberType + @EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Code, htmlAttributes: new { @id = "lblMemberTypeName", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.MemberTypeCode, new { @class = "form-control input-control", @InputFor = "lblMemberTypeName", @data_convert = "uppercase" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.MemberTypeCode)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.MemberType + @EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Name, htmlAttributes: new { @id = "lblMemberTypeName", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.MemberTypeName, new { @class = "form-control input-control", @InputFor = "lblMemberTypeName", @data_convert = "uppercase" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.MemberTypeName)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-4 col-sm-6 col-12">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.AllowedBooks, htmlAttributes: new { @id = "lblNoOfBookIssueAtATime", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.NumberOfBooksAllowed, new { @class = "form-control input-control", @InputFor = "lblNoOfBookIssueAtATime" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.NumberOfBooksAllowed)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.RegistrationFee, htmlAttributes: new { @id = "lblRegistrationFee", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.RegistrationFee, "{0:G29}", new { @class = "form-control input-control", @InputFor = "lblRegistrationFee" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.RegistrationFee)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-4 col-sm-6 col-12">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.MembershipFee, htmlAttributes: new { @id = "lblMemberShipFee", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.MemberShipFee, "{0:G29}", new { @class = "form-control input-control", @InputFor = "lblMemberShipFee" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.MemberShipFee)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.LateFeePerDay, htmlAttributes: new { @id = "lblLateFeePerDay", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.LateFeePerDay, "{0:G29}", new { @class = "form-control input-control", @InputFor = "lblLateFeePerDay" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.LateFeePerDay)
                        </span>
                    </fieldset>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.ReturnPeriod, htmlAttributes: new { @id = "lblReturnPeriod", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.ReturnPeriod, new { @class = "form-control input-control", @InputFor = "lblReturnPeriod" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.ReturnPeriod)
                        </span>
                    </fieldset>
                </div>

                <div class="col-lg-4 col-sm-6 col-12">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.IsActive, new { @class = "form-label" })

                        <div class="switch-check my-2">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "switch-input" })
                            <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                            <div class="switch-handle"></div>
                        </div>
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.IsActive)
                        </span>
                    </fieldset>
                </div>
            </div>

            <div class="form-row">
                <span class="text-danger"><strong> @Html.ValidationMessage("error_msg")</strong>  </span>
            </div>
        </div>
    </div>

    <div class="modal-footer justify-content-start">
        <div class="form-group">
            <input type="submit" value="@EduSuiteUIResources.Submit" id="btnSave" class="btn btn-sm btn-success mx-1" />
            <button type="button" data-dismiss="modal" class="btn btn-sm btn-danger mx-1">@EduSuiteUIResources.Cancel</button>

        </div>
    </div>

}



