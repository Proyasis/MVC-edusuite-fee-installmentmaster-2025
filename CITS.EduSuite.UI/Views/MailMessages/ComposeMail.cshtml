    .textBoxStyle {
        background: white;
        outline: none;
        min-height: 29px;
        border: solid #c3c1bd 1px;
        outline: none !important;
        box-shadow: inset 0 0 1px 1px #888;
        border: solid #e3e3e3 1px;
        padding: 3px 4px;
        font-size: 12px;
    }
</style>
