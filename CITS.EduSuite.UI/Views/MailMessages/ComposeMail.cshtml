@model CITS.EduSuite.Business.Models.ViewModels.MailMessagesViewModel
@using CITS.EduSuite.Business.Models.ViewModels



<link href="~/Content/typeahead.css" rel="stylesheet" />
<div class="modal-header">
    <i data-dismiss="modal" class="fa fa-remove close"></i>
    <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.ComposeMessage</h4>
</div>


<style>
    .AutoCompleteList {
        background: white;
        border: solid #dad4d4 1px;
        border-bottom-right-radius: 2px;
        border-bottom-left-radius: 3px;
        position: absolute;
        width: 99%;
        padding: 0px;
        z-index: 99;
        height: 300px;
        overflow: auto;
    }


        .AutoCompleteList li {
            list-style-type: none;
            padding: 1px;
            display: block;
            padding-left: 7px;
            min-height: 23px;
            cursor: pointer;
            word-break: break-all;
        }

            .AutoCompleteList li:hover {
                background: #f6ffaf;
            }

    a.TagData {
        background: #b71010;
        padding: 0px 9px;
        text-decoration: none;
        color: white;
        margin-right: 4px;
        padding-right: 18px;
        display: inline-block;
        margin-bottom: 4px;
        border-radius: 3px;
    }

    .SendersList {
        float: left;
        width: 100%;
        overflow: auto;
    }

    i.RemoveTag.fa.fa-remove {
        position: absolute;
        margin-left: -15px;
        color: white;
        margin-top: -6px;
        background: #e60e5e;
        width: 16px;
        text-align: center;
        border-radius: 50%;
        height: 15px;
        font-size: 12px;
        padding-top: 1px;
    }

    .btnForm {
        margin-left: 4px;
    }

    .MessageSubject {
        font-weight: bold;
        color: black;
        overflow: hidden;
        padding: 0px;
    }
</style>




@using (Html.BeginForm("ComposeMailMessage", "MailMessages", FormMethod.Post, htmlAttributes: new { @id = "frmComposeMessage" }))
{

    @Html.HiddenFor(m => m.RowKey)
    @Html.HiddenFor(m => m.MailMessageKey)
    @Html.HiddenFor(m => m.ActiveTabKey)
    <div class="modal-body bottomLine">
        <div class="topMarginSpace  form-master fnone">
            <div class="paddingNone">
                <span class="ValidateDataMsg"> @Html.ValidationMessage("error_msg")  </span>
            </div>

            <div class="formMaster paddingNone">
                <div class="row">
                    <div class="col-sm-12 mandatoryHead ">
                        <span>@EduSuiteUIResources.FieldsMarkedAs<span class="mandatoryStar"> * </span>@EduSuiteUIResources.AreMandatory</span>
                    </div>
                </div>


                @*<div class="row">
                        <div class="col-sm-12 form-col">
                            <div class="form-group">
                                @Html.HiddenFor(m => m.UserIdList, new { @class = "input-control form-control form-control-sm" })
                                @Html.TextBoxFor(m => m.UserId, new { @class = "input-control form-control form-control-sm", @oninput = "GetTagList(this)", @autocomplete = "off",@PlaceHolder="Enter UserName" })
                                <span id="UserIdListVal" style="display:none" class="red">
                                    <span class="field-validation-error">
                                        <span id="MessageSubject-UserId" class="">Plese Enter UserName</span>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>*@


                <div class="row">
                    <div class="col-sm-12 form-col">
                        <div class="form-group">
                            @Html.ListBoxFor(m => m.MailToUserKeys, new SelectList(Model.ToEmployees, "RowKey", "Text"), new { @class = "input-control full-width", @data_plugin_type = "select2", @multiple = "multiple", @placeholder = EduSuiteUIResources.To })
                             <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.MailToUserKeys)
                            </span>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-12 form-col">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.MessageSubject, new { @class = "input-control form-control form-control-sm", @placeholder = EduSuiteUIResources.Subject })
                             <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.MessageSubject)
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 form-col">
                        <div class="form-group">
                            <input name="MessageFiles" class="input-control form-control form-control-sm" type="file" multiple="Multiple">

                            @foreach (var FileName in Model.FilesNames)
                            {
                                <a target="_blank" filename="@FileName.FileName" id="File_@FileName.FileName.Split('.').First()" class="ComposefileAttachMent" href="@Url.Content("~/UploadFiles/MailBoxFiles/" + FileName.FileName)"><i class="fa fa-file"></i> Attachment @FileName.FileName  </a><i id="Remove_@FileName.FileName.Split('.').First()" onclick="RemoveFileAttachMent('File_@FileName.FileName.Split('.').First()',this)" class="fa fa-remove RemoveFileAttachMent"></i>
                            }

                        </div>
                    </div>
                </div>

                @Html.HiddenFor(m => m.ForwardFileNames, new { @class = "input-control form-control form-control-sm", @Style = "Height:200px" })


                <div class="row">
                    <div class="col-sm-12 form-col">
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.MessageContent, new { @class = "input-control form-control form-control-sm", @data_plugin_type = "summernote", @placeholder = EduSuiteUIResources.Message })
                             <span class="form-control-error-text">
                                @Html.ValidationMessageFor(m => m.MessageContent)
                            </span>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-6 form-col">
                        <div class="form-group col-sm-12 paddingNone">
                            <input type="button" value="@EduSuiteUIResources.Send" id="btnSaveCopy" class="btnForm btnSubmit btn btn-sm btn-default pull-left " />
                            <input type="button" value="@EduSuiteUIResources.Save @EduSuiteUIResources.Draft" id="btnSaveDraft" class="btnForm btnSubmit btn btn-sm btn-default pull-left " />
                            <button type="button" id="btnCancel" data-dismiss="modal" class="btnForm btnCancel btn btn-sm btn-default pull-left">@EduSuiteUIResources.Cancel</button>

                        </div>
                        <div class="col-sm-12 paddingNone">
                            <span class="ValidateDataMsg"> @Html.ValidationMessage("error_msg")  </span>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>




}

<script>



    $(document).ready(function () {
        var jsonData=@(Html.Raw(Json.Encode(Model)));
        $.validator.unobtrusive.parse($("#frmComposeMessage")[0]);

        $('form').each(function () {
            if ($(this).data('validator'))
                $(this).data('validator').settings.ignore = ".note-editor *";
        });

        AppCommon.FormatDateInput();
        AppCommon.FormatTimeInput();
        AppCommon.FormatInputCase();
        AppCommon.FormatSelect2();
        AppCommon.FormatTextEditor();
        $("#btnSaveCopy").click(function () {
            //if ($("#UserIdList").val() == "")
            //{
            //    $("#UserIdListVal").removeAttr("style");
            //    //GetOldFileNamesList();
            //    //Enquiry.ComposeFormSubmit(jsonData,0);

            //}
            //else
            //{
            GetOldFileNamesList();
            MailMessage.ComposeFormSubmit(jsonData, 0);
            //    $("#UserIdListVal").css("display", "none");
            //}


        });


        $("#btnSaveDraft").click(function () {
            //$("#UserIdListVal").css("display", "none");
            GetOldFileNamesList();
            MailMessage.ComposeFormSubmit(jsonData, 1);
        });


    });


    function RemoveFileAttachMent(object, removeObject) {
        $(document).ready(function () {
            $('#' + object).remove();
            $('#' + removeObject.id).remove();

        });
    }


</script>



<script>



    function GetTagList(object) {
        $(document).ready(function () {
            var obj = {}
            obj.text = $(object).val();
            MailMessage.GetAppUserByText(obj);

        });
    }


    $(document).on('click', 'body', function (e) {
        //alert(e.target.id);
        if (e.target.id != "UserId") {
            $("#AppUserList").remove();
        }
        if (e.target.id != "UserId") {
            $("#AppUserList").remove();
        }
    });


</script>

