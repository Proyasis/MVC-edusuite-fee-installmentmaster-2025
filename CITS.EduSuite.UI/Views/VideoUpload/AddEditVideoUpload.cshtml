@model CITS.EduSuite.Business.Models.ViewModels.VideoViewModel
@using CITS.EduSuite.Business.Models.Resources
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CitsValidation")
    @Scripts.Render("~/Content/DatePickerJS")
    @Scripts.Render("~/Content/JqueryRepeater")
    @Scripts.Render("~/Scripts/VideoUpload")
}

<header class="section-header">
    <div class="row justify-content-between px-1">
        <div class="col-12">
            <div class="tbl">
                <div class="tbl-row  px-1">
                    <div class="tbl-cell">
                        <h3>@EduSuiteUIResources.Add@EduSuiteUIResources.Hyphen@EduSuiteUIResources.Edit@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.VideoUpload</h3>
                        <ol class="breadcrumb breadcrumb-simple mb-2 float-sm-right">
                            <li><a href="#" onclick="location.href='@Url.Action("VideoList","VideoUpload")' ">@EduSuiteUIResources.Videos</a></li>
                            <li class="active">@EduSuiteUIResources.Add@EduSuiteUIResources.Hyphen@EduSuiteUIResources.Edit@EduSuiteUIResources.BlankSpace@EduSuiteUIResources.VideoUpload</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<input type="hidden" id="hdnDeleteVideoDetails" value="@Url.Action("DeleteVideoDetails", "VideoUpload")" />
<input type="hidden" id="hdnVideoList" value="@Url.Action("VideoList", "VideoUpload")" />
<input type="hidden" id="hdnGetVideosByVideoDetailsId" value="@Url.Action("GetVideosByVideoDetailsId", "VideoUpload")" />



<div id="progressBar">


    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%;">
            0
        </div>
    </div>

</div>

<section class="section-content mx-sm-3 mx-0">

    <div class="form-master w3-white p-2 col-12 col-md-12 co-lg-6">
        @using (Html.BeginForm("AddEditVideoUpload", "VideoUpload", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddEditVideoUpload"}))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.RowKey)
            @Html.ValidationSummary(true)

            <div>
                <div>
                    <div class="form-row">
                        <div class="col-12 col-sm-3 col-lg-2">
                            <div class="form-group">
                                @Html.Label(EduSuiteUIResources.VideoSubject, htmlAttributes: new { @id = "lblServiceType", @class = "form-label" })
                                <div class="required-icon"><div class="text">*</div></div>
                                @Html.DropDownListFor(m => m.SubjectKey, new SelectList(Model.VideoSubject, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.VideoSubject, new { @class = "input-control form-control form-control-sm", @InputFor = "lblServiceType", @data_live_search = "true" })
                                <span class="form-control-error-text">
                                    @Html.ValidationMessageFor(m => m.SubjectKey)
                                </span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-4 col-lg-4">
                            <div class="form-group">
                                @Html.Label(EduSuiteUIResources.VideoTitle, htmlAttributes: new { @id = "lblServiceType", @class = "form-label" })

                                <div class="required-icon"><div class="text">*</div></div>
                                @Html.TextBoxFor(m => m.VideoTitle, new { @class = "input-control form-control form-control-sm", @InputFor = "lblEnquiryName" })
                                <span class="form-control-error-text">
                                    @Html.ValidationMessageFor(m => m.VideoTitle)
                                </span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-2 col-lg-2">
                            <fieldset class="form-group ">
                                @Html.Label(EduSuiteUIResources.IsActive, new { @class = "form-label" })

                                <div class="switch-check my-2">
                                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "switch-input" })
                                    <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                                    <div class="switch-handle"></div>
                                </div>
                                <span class="form-control-error-text">
                                    @Html.ValidationMessageFor(m => m.IsActive)
                                </span>

                            </fieldset>
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="repeater col-sm-12">
                            <div data-repeater-list>
                                @for (int i = 0; i < Model.VideoList.Count(); i++)
                                {

                                    <div data-repeater-item>
                                        <div class="row">

                                            <div class="col-12 col-sm-2 col-lg-2">
                                                <div class="form-group">
                                                    @Html.Label(EduSuiteUIResources.VideoType, htmlAttributes: new { @id = "lblServiceType", @class = "form-label" })
                                                    <div class="required-icon"><div class="text">*</div></div>
                                                    @Html.DropDownListFor(m => m.VideoList[i].VideoTypeKey, new SelectList(Model.VideoTypes, "RowKey", "Text"), EduSuiteUIResources.Select + EduSuiteUIResources.BlankSpace + EduSuiteUIResources.Visibility, new { @class = "input-control form-control form-control-sm", @onchange = "VideoUpload.CheckVideoType(this)" })
                                                    <span class="form-control-error-text">
                                                        @Html.ValidationMessageFor(m => m.VideoList[i].VideoTypeKey)
                                                    </span>
                                                </div>
                                            </div>

                                            <div class="col-12 col-sm-3 col-lg-3 divFileAttachment">
                                                <div class="form-group">                                                   
                                                    @*@Html.TextBoxFor(m => m.VideoList[i].DocumentVideoAttachMent, new { @index = i, @class = "form-control input-control file", @InputFor = "lblDocumentFile", @type = "file" })*@
                                                    @*<input inputfor="lblDocumentFile" class="form-control input-control file" id="VideoList[@i].DocumentVideoAttachMent"  name="VideoList[@i].DocumentVideoAttachMent" type="file" value="">*@
                                                    @Html.Label(EduSuiteUIResources.Attachment, htmlAttributes: new { @id = "lblServiceType", @class = "form-label" })

                                                    @Html.TextBoxFor(m => m.VideoList[i].VideoFileAttachment, new { @onchange = "CheckExtension(this)", @type = "file", @class = "input-control form-control form-control-sm fileUpload", @InputFor = "lblEnquiryName" })

                                                    @if (Model.VideoList[i].VideoFileName != null)
                                                    {
                                                        <a class="gvCountDefault" onclick="VideoUpload.GetVideosByVideoDetailsId(@Model.VideoList[i].RowKey)">View</a>
                                                    }

                                                    <span class="form-control-error-text">
                                                        @Html.ValidationMessageFor(m => m.VideoList[i].VideoFileName)
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-3 col-lg-3 divYoutubelink" data-hidden>
                                                <div class="form-group">
                                                    @Html.Label(EduSuiteUIResources.YoutubeLink, htmlAttributes: new { @id = "lblServiceType", @class = "form-label" })
                                                    <div class="required-icon"><div class="text">*</div></div>
                                                    @Html.TextBoxFor(m => m.VideoList[i].YouTubeLinks, new { @class = "input-control form-control form-control-sm", @InputFor = "lblEnquiryName" })
                                                    <span class="form-control-error-text">
                                                        @Html.ValidationMessageFor(m => m.VideoList[i].YouTubeLinks)

                                                    </span>
                                                    @Html.HiddenFor(m => m.VideoList[i].RowKey)
                                                    @Html.HiddenFor(m => m.VideoList[i].VideoFileName)
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-3 col-lg-3">
                                                <div class="form-group">
                                                    @Html.Label(EduSuiteUIResources.VideoDescriptions, htmlAttributes: new { @id = "lblServiceType", @class = "form-label" })
                                                    <div class="required-icon"><div class="text">*</div></div>
                                                    @Html.TextBoxFor(m => m.VideoList[i].VideoDecription, new { @class = "input-control form-control form-control-sm", @InputFor = "lblEnquiryName" })
                                                    <span class="form-control-error-text">
                                                        @Html.ValidationMessageFor(m => m.VideoList[i].VideoDecription)

                                                    </span>
                                                    @Html.HiddenFor(m => m.VideoList[i].RowKey)
                                                    @Html.HiddenFor(m => m.VideoList[i].VideoFileName)
                                                </div>
                                            </div>


                                         
                                            <div class="col-12 col-sm-2 col-lg-1">
                                                <fieldset class="form-group ">
                                                    @Html.Label(EduSuiteUIResources.IsActive, new { @class = "form-label" })

                                                    <div class="switch-check my-2">
                                                        <input class="switch-input" checked="@Model.VideoList[i].IsActive" id="VideoList[@i].IsActive" name="VideoList[@i].IsActive" type="checkbox" value="true">
                                                        <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                                                        <div class="switch-handle"></div>
                                                    </div>
                                                    <span class="form-control-error-text">
                                                        @Html.ValidationMessageFor(m => m.VideoList[i].IsActive)
                                                    </span>

                                                </fieldset>
                                            </div>

                                            <div class="col-12 col-sm-2 col-lg-2 divAllowDownload">
                                                <fieldset class="form-group ">
                                                    @Html.Label(EduSuiteUIResources.IsAllowDownload, new { @class = "form-label" })
                                                    <div class="switch-check my-2">
                                                        <input class="switch-input" checked="@Model.VideoList[i].IsAllowDownload" id="VideoList[@i].IsActive" name="VideoList[@i].IsAllowDownload" type="checkbox" value="true">
                                                        <div class="switch-label redgreen" data-on="@EduSuiteUIResources.Yes" data-off="@EduSuiteUIResources.No"></div>
                                                        <div class="switch-handle"></div>
                                                    </div>
                                                    <span class="form-control-error-text">
                                                        @Html.ValidationMessageFor(m => m.VideoList[i].IsAllowDownload)
                                                    </span>

                                                </fieldset>
                                            </div>

                                            <div class="col-1 col-sm-2 col-lg-1">
                                                <fieldset class="form-group">
                                                    <span data-repeater-delete="" class="btn btn-danger btn-sm mt-4 float-right">
                                                        <span class="fa fa-remove "></span>
                                                    </span>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </div>

                                }


                            </div>
                            <div class="form-row">
                                <div class="col-12">
                                    <span data-repeater-create class="btn btn-info btn-sm float-right">
                                        <span class="glyphicon glyphicon-plus"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <div class="form-group">
                                <button type="button" id="btnSave" onclick="VideoUpload.FormSubmit()" class="btn btn-sm btn-success mx-1"><i class="fa fa-save"></i> @EduSuiteUIResources.Save</button>
                            </div>
                        </div>
                        <div class="col-12">
                            <span class="ValidateDataMsg"> @Html.ValidationMessage("error_msg")  </span>
                        </div>
                    </div>

                </div>
            </div>

        }



    </div>
</section>



<style>
    .progress {
        border-radius: 0px;
    }
</style>


