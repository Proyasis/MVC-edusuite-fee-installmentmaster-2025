<script>


    function CheckExtension(_this) {
        var ext = _this.value.split(".");
        ext = ext[ext.length - 1].toLowerCase();
        var fileExtension = ['mp4', 'm4a', 'm4v', 'f4v', 'f4a', 'm4b', 'm4r', 'f4b', 'mov', '3gp', '3gp2', '3g2', '3gpp', '3gpp2', 'wmv', 'wma', 'asf', 'webm', 'flv', 'avi',];
        if (fileExtension.lastIndexOf((ext ? ext : "").toLowerCase()) == -1) {
            alert("Only formats are allowed : " + fileExtension.join(', '));
            $(_this).val("")
            return false;
        }


    };
</script>


