@model CITS.EduSuite.Business.Models.ViewModels.WorkscheduleSubjectmodel


<div class="modal-header">
    <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close"><i class="fa fa-close"></i></button>
    <h4 class="modal-title" id="myModalLabel">@EduSuiteUIResources.Add @EduSuiteUIResources.Sla @EduSuiteUIResources.Edit@EduSuiteUIResources.BlankSpace @EduSuiteUIResources.WorkSchedule</h4>
</div>
@using (Html.BeginForm("AddEditWorkScheduleDetails", "WorkSchedule", FormMethod.Post, new { @id = "frmWorkScheduleDetails" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RowKey)
    @Html.HiddenFor(m => m.BranchKey)
    @Html.HiddenFor(m => m.EmployeeKey)
    @Html.HiddenFor(m => m.ClassDetailsKey)
    @Html.HiddenFor(m => m.BatchKey)
    @Html.HiddenFor(m => m.SubjectKey)
    @Html.HiddenFor(m => m.SubjectModuleKey)
    @Html.HiddenFor(m => m.TopicKey)
    @Html.HiddenFor(m => m.MasterRowKey)
    @Html.HiddenFor(m => m.ProgressStatus)
    @Html.HiddenFor(m => m.OldCurrentProgressStatus)
    @Html.ValidationSummary(true)

    <div class="modal-body">
        <div class="form-master">
            <div class="form-row">
                <div class="col-12">
                    <span class="ValidateDataMsg text-danger"><strong> @Html.ValidationMessage("error_msg")</strong>  </span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-4">
                    <fieldset class="form-group">
                        @Html.Label(EduSuiteUIResources.Date, htmlAttributes: new { @id = "lblAccountHeadType", @class = "form-label" })
                        <div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.WorkScheduleDate, "{0:dd/MM/yyyy}", new { @class = "form-control input-control", @data_inputmask = "'alias': 'dd/mm/yyyy'", @data_input_type = "date" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.WorkScheduleDate)
                        </span>
                    </fieldset>
                </div>
                <div class="col-4">
                    <fieldset class="form-group ">
                        @Html.Label(EduSuiteUIResources.StartTime, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.TimeIn, new { @class = "form-control input-control", @data_input_type = "time", @data_inputmask = "'alias':'hh:mm t','hourFormat': '12'", @InputFor = "lblCallDuration" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.TimeIn)
                        </span>
                    </fieldset>
                </div>

                <div class="col-4">
                    <fieldset class="form-group ">
                        @Html.Label(EduSuiteUIResources.EndTime, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.TimeOut, new { @class = "form-control input-control", @data_input_type = "time", @data_inputmask = "'alias':'hh:mm t','hourFormat': '12'", @InputFor = "lblCallDuration" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.TimeOut)
                        </span>
                    </fieldset>
                </div>
                <div class="col-4">
                    <fieldset class="form-group ">
                        @Html.Label(EduSuiteUIResources.Duration + EduSuiteUIResources.OpenBracket + "Min" + EduSuiteUIResources.CloseBracket, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control input-control" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.Duration)
                        </span>
                    </fieldset>
                </div>
                <div class="col-4">
                    <fieldset class="form-group ">
                        @Html.Label(EduSuiteUIResources.Status + EduSuiteUIResources.OpenBracket + EduSuiteUIResources.PercentageSymbol + EduSuiteUIResources.CloseBracket, htmlAttributes: new { @class = "form-label" })<div class="required-icon"><div class="text">*</div></div>
                        @Html.TextBoxFor(m => m.CurrentProgressStatus, new { @class = "form-control input-control" })
                        <span class="form-control-error-text">
                            @Html.ValidationMessageFor(m => m.CurrentProgressStatus)
                        </span>
                    </fieldset>
                </div>
            </div>

        </div>

    </div>



    <div class="modal-footer justify-content-start">
        <div class="form-group">
            <input type="button" value="@EduSuiteUIResources.Submit" id="btnSave" class="btn btn-sm btn-success mx-1" />
            <button type="button" data-dismiss="modal" class="btn btn-sm btn-danger mx-1">@EduSuiteUIResources.Cancel</button>

        </div>
    </div>
}

<script>

    var jsonData=@(Html.Raw(Json.Encode(Model)));

    $(document).ready(function () {
        $("[data-input-type=time]").each(function ()
        {
            
            if ($(this).val() != "")
            {
                $(this).val(moment($(this).val(), ["HH:mm:ss"]).format("hh:mm A"));
            }
        })

        $("#btnSave").on("click",function(){

            WorkSchedule.FormSubmit(jsonData);

        })
        $("#CurrentProgressStatus").on("input",function(){
            
            var CurrentProgressStatus=$(this).val();
            var TotalProgressStatus=$("#ProgressStatus").val();
            var Rowkey=$("#RowKey").val();
            var OldCurrentProgressStatus=$("#OldCurrentProgressStatus").val();
            CurrentProgressStatus=parseFloat(CurrentProgressStatus)?parseFloat(CurrentProgressStatus):0;
            TotalProgressStatus=parseFloat(TotalProgressStatus)?parseFloat(TotalProgressStatus):0;
            OldCurrentProgressStatus=parseFloat(OldCurrentProgressStatus)?parseFloat(OldCurrentProgressStatus):0;

            var Balancestatus=(100-parseFloat(TotalProgressStatus));
            Balancestatus=parseFloat(Balancestatus)?parseFloat(Balancestatus):0;

            if(parseInt(Rowkey)!=0)
            {
                Balancestatus=Balancestatus+OldCurrentProgressStatus;
            }
            if(CurrentProgressStatus>=Balancestatus)
            {
                $("#CurrentProgressStatus").val(Balancestatus);
            }
        })

        AppCommon.FormatDateInput();
        AppCommon.FormatInputCase();
        AppCommon.FormatTimeInput();
        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");


    });

</script>